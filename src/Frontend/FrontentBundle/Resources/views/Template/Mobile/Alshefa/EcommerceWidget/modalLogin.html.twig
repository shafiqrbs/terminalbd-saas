</div>
<!-- Modal -->
<div id="login-modal" class="mfp-hide" >
    <div class="modal-content  col-xs-12 col-md-12">
        <form class="register" id="{% if globalOption.templateCustomize.otpLogin == 1 %}otpLoginForm{% else %}loginForm{% endif %}" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <div class="modal-header">
                <h4 class="modal-title">LOGIN</h4>
            </div>
            <div class="panel-body">
                <div id="loginMsg"></div>
                <div class="form-group">
                        {% if globalOption.templateCustomize.otpLogin == 1 %}
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                                    <input type="text" data-action="{{ path(globalOption.subDomain ~ '_webservice_customer_mobile_validation') }}" id="_username" name="_username" required="required" class="form-control  userMobile" placeholder="Enter your mobile no">
                            </div>
                            <p class="help">Enter your registered mobile no</p>
                        {% else %}
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                                    <input type="text"  id="_username" name="_username" required="required" class="form-control" placeholder="Enter your mobile no or username">
                            </div>
                        {% endif %}
                </div>
                <div class="form-group">

                    {% if globalOption.templateCustomize.otpLogin == 1 %}
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                <input type="text" id="_password" name="_password" required="required" class="form-control secured otp" placeholder="OTP ">
                            </div>
                            <p class="help">One-Time Password using your mobile phone</p>
                    {% else %}
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                <input type="password" id="_password" name="_password" required="required" class="form-control secured" placeholder="Password">
                            </div>
                            <p class="help">Using valid password</p>
                            <input type="hidden" name="_remember_me" id="remember_me" value="on">
                    {% endif %}
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-xs-8 col-md-8 text-left" >
                       <span style="font-size:12px"> Don't have an account yet ?&nbsp;</span>
                        <a href="#register-modal" class="popup-top-anim link-btn register-btn">Create an account</a>
                    </div>
                    <div class="col-md-4">
                        <button type="submit"  class="btn btn-sm btn-blue pull-right" role="button">Log in</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->
<!-- Modal -->

