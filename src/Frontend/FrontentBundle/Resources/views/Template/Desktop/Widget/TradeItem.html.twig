


{% if entities is defined and entities is not empty and module.slug == 'news' %}
    <div class="">
        <h4 class="sidebar-title"><i class="fa fa-align-left"></i>&nbsp;Recent News</h4>
        <hr>
        {% for entity in entities  %}
            <div class="media">
                <a class="pull-left" href="{{ path('webservice_module_page',{'subdomain': globalOption.subDomain,'module': 'news','slug':entity.slug }) }}">
                    <img class="img-responsive media-object" src="{{ image(entity.webPath).resize(80,80) }}" alt="Media Object">
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><a href="{{ path('webservice_module_page',{'subdomain': globalOption.subDomain,'module': 'news','slug':entity.slug }) }}">{{ entity.name }}</a></h4>
                    {{ entity.content|raw|truncate(100) }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% if entities is defined and entities is not empty and module.slug == 'noticeboard'  %}
    <div class="">
        <h4 class="sidebar-title"><i class="fa fa-align-left"></i>&nbsp;Recent Notice</h4>
        <hr style="margin-bottom:2px;">
        {% for entity in entities  %}
            <div class="media">
                <div class="notice-list">
                    <div class="post-review">
                        <div class="post-date">
                            {{ entity.startDate|date('d') }}
                            <small>{{ entity.startDate|date('F') }}</small>
                        </div>
                        <h5 class="post-title">
                            <a href="#">{{ entity.name }}</a>
                        </h5>
                        <p class="post-description">
                            {{ entity.content|truncate(200)|raw }}
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
