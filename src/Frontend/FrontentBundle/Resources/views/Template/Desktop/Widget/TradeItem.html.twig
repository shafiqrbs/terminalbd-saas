{% if entities is defined and entities is not empty and module.slug == 'faq'  %}
    <div class="">
        <h4 class="sidebar-title"><i class="fa fa-align-left"></i>&nbsp;FAQ</h4>
        <div class="media">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel-group" id="sidebar-accordion" role="tablist" aria-multiselectable="true">
                        {% for entity in entities  %}
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="heading-{{ loop.index }}">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-{{ loop.index }}" aria-expanded="true" aria-controls="collapseOne">
                                            {{ entity.name }}
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse-{{ loop.index }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading-{{ loop.index }}">
                                    <div class="panel-body">
                                        <p>{{ entity.content|raw }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endif %}
