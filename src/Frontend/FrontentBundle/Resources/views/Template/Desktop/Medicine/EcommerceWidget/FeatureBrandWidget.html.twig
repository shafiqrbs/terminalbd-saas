{% for brand in  brands  %}
    <div class="col-md-12">
        <div class="thumbnail feature-brand" data-match-height="feature-brand">
            <div class="product-preview" >
                <a href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'subdomain': globalOption.subDomain,'id':brand.id }) }}">
                    <img class="img-responsive" src="{{ image(brand.webPath).resize(150,120) }}" alt=""></a>
            </div>
        </div>
        <div class="caption">
            <a class="group inner brand-name text-center" href="{{ path(globalOption.subDomain ~ '_webservice_product_brand',{'subdomain': globalOption.subDomain,'id':brand.id }) }}">{{ brand.name }}</a>
        </div>
    </div>
{% endfor %}