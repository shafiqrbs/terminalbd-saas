<div class="" style="margin-top: -50px">
    <div class="col-xs-6 col-md-6">
        <div class="btn-group">
        </div>
    </div>
    <div class="col-xs-6 col-md-6 text-right">
        <div class="btn-group ">
            <a href="#" id="list" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-th-list"></span> List</a> <a href="#" id="grid" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-th"></span> Grid</a>
        </div>
    </div>
    <div class="clearfix"><br/></div>
    <div id="categories-list" class="list-group">
        {% for key,entity in pagination  %}
            <div  class="item  {% if globalOption.templateCustomize.showSidebar == 1 and globalOption.featureWidgets is empty  %} col-md-4 col-xs-4 col-lg-4 {% else %}  col-md-3 col-xs-3 col-lg-3 {% endif %}">
                <div class="thumbnail">
                    <img class="group list-group-image" style="max-height: 250px; min-height: 250px"  src="{{ image(entity.webPath).forceResize(400,250) }}" alt="" />
                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">{{ entity.name }}</h4>
                        <p class="group inner list-group-item-text">{{ entity.content|striptags|raw|truncate(150) }}</p>
                        <p class="group inner list-group-item-text"> {% if entity.moduleCategory is not empty %}
                                {% for cat in entity.moduleCategory  %}
                                    <a class="" href="{{ path(globalOption.subDomain ~ '_webservice_module_category',{'subdomain': globalOption.subDomain,'module': entity.module.slug,'slug':entity.slug }) }}"> {{ cat.name }}</a>
                                    {% if not loop.last %},{% endif %}
                                {% endfor %}
                            {% endif %}</p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a class="btn btn-success" href="{{ path(globalOption.subDomain ~ '_webservice_module_page',{'subdomain': globalOption.subDomain,'module': entity.module.slug,'slug':entity.slug }) }}">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<style>

    .thumbnail
    {
        margin-bottom: 20px;
        padding: 0;
        width:auto;
        -webkit-border-radius: 0;
        -moz-border-radius: 0;
        border-radius: 0;
    }
    .img-responsive, .thumbnail > img, .thumbnail a > img, .carousel-inner > .item > img, .carousel-inner > .item > a > img{
        width:auto;
    }

    .item.list-group-item
    {
        float: none;
        width: 97%;
        background-color: #fff;
        margin-bottom: 10px;
        padding: 1px!important;
        margin-left: 15px;
        margin-right: 15px;
    }
    .item.list-group-item:nth-of-type(odd):hover,.item.list-group-item:hover
    {
        background: #428bca;
    }

    .item.list-group-item .list-group-image
    {
        margin-right: 10px;
    }
    .item.list-group-item .thumbnail
    {
        margin-bottom: 0px;
    }
    .item.list-group-item .caption
    {
        padding: 9px 9px 0px 9px;
    }
    .item.list-group-item:nth-of-type(odd)
    {
        background: #eeeeee;
    }

    .item.list-group-item:before, .item.list-group-item:after
    {
        display: table;
        content: " ";
    }

    .item.list-group-item img
    {
        float: left;
    }
    .item.list-group-item:after
    {
        clear: both;
    }
    .list-group-item-text
    {
        margin: 0 0 11px;
    }

</style>
<div class="pagination pull-center"  >
    {{ knp_pagination_render(pagination) }}
</div>
