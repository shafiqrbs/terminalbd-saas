
<style>
    .search-span{
        float: right;
        display: inline-block;
        width: 30%;
        margin-right: 2px;
    }
    .search-span-last{
        float: right;
        display: inline-block;
        width: 5%;
    }
    .search-span input{
        width: 100%;
    }
    .search-span .select2{
        width: 100%;
    }
</style>
<div class="tm-row tm-search">
    <form class="form-vertical login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <span class="search-span-last">
        <input type="submit" id="submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
               class="btn blue pull-right">
                Login <i class="m-icon-swapright m-icon-white"></i>
        </span>
        <span class="search-span">
            <input class="m-wrap placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="username" name="_username" value="{{ last_username }}"/>
        </span>
        <span class="search-span"> <input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="password" name="_password"/></span>
    </form>
</div>

