{% extends ':bindu/mobile:base.html.twig' %}
{% block body %}
    <div class="bannerPane bannerPane-webbuilder">
        <div class="overlay"></div>
        <div class="s-banner-content">
            <div><img width="100" src="{{ asset('assets/frontend/img/logo.png') }}" /></div>
            Confirm signup
        </div>
    </div>
    <div id="content">
        <form class="contactForm" id="commentform" action="{{ path("fos_user_security_check") }}" method="post" novalidate="novalidate">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            <label>Mobile no<span class="required">*</span></label>
            <input type="text" id="_username" name="_username" required="required" class="" placeholder="Enter your mobile no">

            <label>Passcode<span class="required">*</span></label>
            <input type="text" id="_password" name="_password" required="required" class="secured" placeholder="Enter your password">
            <label class="form-suphobmit" style="text-align:center"><input id="signup" class="btn-normal submit" type="submit" value="Signin" name="submit"></label>
        </form>
    </div>
{% endblock %}