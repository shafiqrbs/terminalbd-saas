{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Manage Diagnostic Test
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('hms_pathology') }}">Diagnostic Test</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Diagnostic Test</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Diagnostic Test</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn" href="{{ path('hms_pathology') }}"><i class="icon-th"></i>&nbsp; Pathology</a>
                    <a class="btn red" href="{{ path('hms_pathology_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a>
                </div>
            </div>
        </div>


    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="row-fluid">
                <!--/span-->
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label"  for="category" >Test Name<span class="required">*</span></label>
                        <div class="controls">
                            <div class="input-icon left">
                                <i class="icon-medkit"></i>
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label"  for="category" >Category</label>
                        <div class="controls">
                            {{ form_widget(form.category) }}
                            {{ form_errors(form.category) }}
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label"  for="department" >Department</label>
                        <div class="controls">
                            {{ form_widget(form.department) }}
                            {{ form_errors(form.department) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <!--/span-->
                <div class="span4">
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Price<span class="required">*</span></label>
                                <div class="controls">
                                    <div class="input-icon left">
                                        <i class="icon-font"></i>
                                        {{ form_widget(form.price) }}
                                        {{ form_errors(form.price) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Minimum Price</label>
                                <div class="controls">
                                    <div class="input-icon left">
                                        <i class="icon-font"></i>
                                        {{ form_widget(form.minimumPrice) }}
                                        {{ form_errors(form.minimumPrice) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Over Head Cost</label>
                                <div class="controls">
                                    <div class="input-icon left">
                                        <i class="icon-font"></i>
                                        {{ form_widget(form.overHeadCost) }}
                                        {{ form_errors(form.overHeadCost) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Commission</label>
                                <div class="controls">
                                    {{ form_widget(form.commission) }}
                                    {{ form_errors(form.commission) }}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row-fluid">

                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Room/Cabin</label>
                                <div class="controls">
                                    {{ form_widget(form.room) }}
                                    {{ form_errors(form.room) }}
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" for="name">Report Height</label>
                                <div class="controls">
                                    {{ form_widget(form.reportHeight) }}
                                    {{ form_errors(form.reportHeight) }}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="span4">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="room">Account Head</label>
                                <div class="controls">
                                    {{ form_widget(form.accountHead) }}
                                    {{ form_errors(form.accountHead) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.isReportContent) }} Report Content</label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.isMachineFormat) }} Machine Format</label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.reportUnitHide) }} Hide Unit</label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.isAttachment) }} Attachment</label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.discountValid) }} Discount Valid</label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.testDuration) }} Test Duration  </label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.reportFormat) }} Report Format Two Column  </label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">{{ form_widget(form.additionalField) }} Is Additional  Field</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">Report Machine Name</label>
                                <div class="controls">
                                    <div class="input-icon left">
                                        <i class="icon-font"></i>
                                        {{ form_widget(form.reportMachineName) }}
                                        {{ form_errors(form.reportMachineName) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">Sepcimen(Sample Collection)</label>
                                <div class="controls">
                                    <div class="input-icon left">
                                        <i class="icon-font"></i>
                                        {{ form_widget(form.sepcimen) }}
                                        {{ form_errors(form.sepcimen) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="name">Assign Operator</label>
                                <div class="controls">
                                    {{ form_widget(form.assignOperator) }}
                                    {{ form_errors(form.assignOperator) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" >Instruction</label>
                                <div class="controls">
                                    {{ form_widget(form.instruction) }}
                                    {{ form_errors(form.instruction) }}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!--/span-->
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group">
                        <label class="control-label" >Report Format</label>
                        <div class="controls">
                            {{ form_widget(form.reportContent) }}
                            {{ form_errors(form.reportContent) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions portlet box grey">
                <div class="pull-right">
                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                    {% if(entity.id > 0 ) %}
                        <a href="{{ path('hms_pathology_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>

    </div>
    </div>
    </div>
    <style>
        table.reportTable{
            width: 100%!important;
            collapse: 0;
            border-collapse: collapse;
            border: 1px solid #000000;
        }
        table.reportTable tr td , table.reportTable tr th{
            text-align: left;
            padding-left: 8px;
            border: 1px solid #000000;
        }
        table.reportTable tr:first-child td , table.reportTable tr:first-child th{
            font-weight: bold;
        }
        table.reportTable tr th.center, table.reportTable tr td.center{
            text-align: center;
        }
        table.reportTable tr td.left{
            text-align: left;
            padding-left: 8px;
        }
        table.reportTable tr td.right{
            text-align: right;
            padding-right: 15px;
        }
        table label{
            width: 72px;
            display: inline-block;
            text-decoration: none;
            font-size: 11px!important;
        }
    </style>
{% endblock %}
