<body id="body">
    <style>

        #print-container{
            width: 100%;
            margin: 0 auto;
            display: block;
            font-size: 12px;
            color: #0A0302;
        }
        .print-header .title-center{
            line-height: 35px;
        }
        .print-header{
            height: 35px!important;
        }

        .print-patient .barcode-left{
            float: left;
            margin-top: 5px;
        }

        .print-patient .barcode-right{
            float: right;
            padding-right: 10px;
            margin-top: 5px;
        }
        .strong3{
            display: inline-block;
            width: 70px;
        }
        .print-patient{
            border: 0!important;
        }
        .table td{
            font-size:13px;
        }
        .barcode-left , .barcode-right{
            line-height: 18px;
            font-size:13px;
        }
        .bottom-border{
            border-bottom: dotted 1px #000101;
        }
        .label-box{
            font-size: 13px;
            border: 1px solid #000;
            padding: 1px;
            min-width: 80px;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            padding-right: 5px;
            padding-left: 5px;
        }
        #body{
            height:301.50mm;
            width:215mm;
            background-image: url("{{ image(entity.assignDoctor.webPath) }}");
            background-repeat: no-repeat;
            margin: 0 auto!important;
            background-size: 215mm 301.50mm;
            background-position: center center;
        }

        #customer{
            position: absolute;
            top: 180px;
            left:85px;
            font-size: 15px;
        }

        #gender{
             position: absolute;
             top: 180px;
             right: 303px;
             font-size: 15px;
        }

        #age{
             position: absolute;
             top: 180px;
             right: 175px;
             font-size: 15px;
        }

        #appointmentDate{
             position: absolute;
             top: 180px;
             right: 50px;
             font-size: 15px;
        }
    </style>
<div style="display: block;" >

   <div style="margin-top:{{ config.printTopMargin }}px; margin-left:{{ config.printLeftMargin }}px;margin-right:{{ config.printLeftMargin }}px;" >
        <div id="print-area" style="position:relative;margin-top: {{ config.printTopMargin }}px!important;">
            <span id="customer" >{% if entity.customer is not empty %}{{ entity.customer.name }}{% endif %}</span>
            <span id="gender" >{% if entity.customer is not empty %}{{ entity.customer.gender }}{% endif %}</span>
            <span id="age" >{% if entity.customer is not empty %}{{ entity.customer.age }}{% endif %} </span>
            <span id="appointmentDate">{{ entity.appointmentDate|date('d-m-Y') }}</span>
        </div>
    </div>
</div>
</body>


