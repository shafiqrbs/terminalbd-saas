<!-- BEGIN FORM-->
{{ form_start(form) }}
{{ form_row(form._token) }}
<div class="portlet box">
    <div class="portlet-body" style="min-height:460px">
        <div class="portlet box green">
        <div class="portlet-title">
            <div class="portlet-title">
                <div class="row-fluid">
                    <div class="span9">
                        <input type="text" id="patient" data-url="{{ path('hms_patient_invoice_search') }}" name="patient"  class="m-wrap span12 invoiceSearch select2Customer" value=""  autocomplete="off" placeholder="Patient ID/name/mobile no">
                    </div>
                    <div class="span3">
                        <div class="actions text-right">
                            <div class="btn-group">
                                <div class="input-append">
                                    <span id="print-link"></span>
                                    <a target="_blank" class="btn red" href="{{ path('hms_invoice_appointment') }}"><i class="icon-th-list"></i> Visit List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid particular-info">
            <div class="span8" id="particular-table" >
                <div class="row-fluid" style="padding-left: 15px" >
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group ">
                                <label class="control-label red" for="firstName"><span>Assign Doctor</span><span class="required">*</span></label>
                                <div class="controls select-error-tooltip">
                                    {{ form_widget(form.assignDoctor) }}
                                    {{ form_errors(form.assignDoctor) }}
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label red" for="firstName"><span>Referred</span></label>
                                <div class="controls">
                                    {{ form_widget(form.referredDoctor) }}
                                    {{ form_errors(form.referredDoctor) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="">
                                <label class="control-label red" for="firstName">Patient Name<span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.customer.name) }}
                                    {{ form_errors(form.customer.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="">
                                <label class="control-label red" for="firstName"><span>Mobile no</span><span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.customer.mobile) }}
                                    {{ form_errors(form.customer.mobile) }}
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="">
                                <label class="control-label red" for="firstName"><span>Age & Gender</span><span class="required">*</span></label>
                                <div class="controls span4" style="margin-left: 0!important;">
                                    {{ form_widget(form.customer.age) }}
                                </div>
                                <div class="controls span4">
                                    {{ form_widget(form.customer.ageType) }}
                                </div>
                                <div class="controls span4">
                                    {{ form_widget(form.customer.gender) }}
                                </div>
                                <div class="clearfix"></div>
                                <div class="controls">
                                    {{ form_errors(form.customer.age) }}
                                    {{ form_errors(form.customer.gender) }}
                                    {{ form_errors(form.customer.gender) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">

                        <div class="span6">
                            <div class="">
                                <label class="control-label red" for="firstName"><span>Height/Weight</span><span>B/P</span></label>
                                <div class="controls span4" style="margin-left: 0!important;">
                                    {{ form_widget(form.customer.height) }}
                                </div>
                                <div class="controls span4">
                                    {{ form_widget(form.customer.weight) }}
                                </div>
                                <div class="controls span4">
                                    {{ form_widget(form.customer.bloodPressure) }}
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="">
                                <label class="control-label red" for="firstName"><span>Appointment Date</span></label>
                                <div class="controls">
                                    {{ form_widget(form.appointmentDate) }}
                                    {{ form_errors(form.appointmentDate) }}
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <div class="span4 payment-info" style="background:#ffffff80!important; padding: 15px;">
                {% if hospital.marketingExecutive == 1 %}
                 <div class="row-fluid">
                    {{ form_widget(form.marketingExecutive) }}
                    {{ form_errors(form.marketingExecutive) }}
                </div>
                {% endif %}
                 <div class="row-fluid">
                    {{ form_widget(form.customer.address) }}
                    {{ form_errors(form.customer.address) }}
                </div>
                <div class="row-fluid ">
                    {{ form_widget(form.visitType) }}
                    {{ form_errors(form.visitType) }}
                </div>
                <div class="row-fluid margin-bottom-10">
                    {{ form_widget(form.diseasesProfile) }}
                    {{ form_errors(form.diseasesProfile) }}
                </div>
                 <div class="row-fluid margin-bottom-10">
                    {{ form_widget(form.specialization) }}
                    {{ form_errors(form.specialization) }}
                </div>
                <div class="row-fluid">
                    {{ form_widget(form.followUpId) }}
                    {{ form_errors(form.followUpId) }}
                </div>
                <div class="row-fluid ">
                    {{ form_widget(form.transactionMethod) }}
                    {{ form_errors(form.transactionMethod) }}
                </div>
                <div id="cartMethod" class="bankHide">
                    <div class="row-fluid">
                        {{ form_widget(form.cardNo) }}
                        {{ form_errors(form.cardNo) }}
                    </div>
                    <div class="row-fluid">
                        {{ form_widget(form.paymentCard) }}
                        {{ form_errors(form.paymentCard) }}
                    </div>
                    <div class="row-fluid">
                        {{ form_widget(form.accountBank) }}
                        {{ form_errors(form.accountBank) }}
                    </div>
                </div>
                <div id="bkashMethod" class="mobileBankHide">
                    <div class="row-fluid">
                        {{ form_widget(form.accountMobileBank) }}
                        {{ form_errors(form.accountMobileBank) }}
                    </div>
                    <div class="row-fluid">
                        {{ form_widget(form.paymentMobile) }}
                        {{ form_errors(form.paymentMobile) }}
                    </div>
                    <div class="row-fluid">
                        {{ form_widget(form.transactionId) }}
                        {{ form_errors(form.transactionId) }}
                    </div>
                </div>
                <div class="row-fluid margin-bottom-5">
                    <label class="custom-control span6 custom-checkbox span6">&nbsp;&nbsp;Is Confirm
                        {{ form_widget(form.isConfirm) }}
                        <span class="custom-control-indicator"></span>
                    </label>
                    <label class="custom-control span6 custom-checkbox">&nbsp;&nbsp;SMS Alert
                        {{ form_widget(form.smsAlert) }}
                        <span class="custom-control-indicator"></span>
                    </label>
                </div>
                <div class="row-fluid">
                    <label class="control-label" id="receive-label" for="firstName"><span class="label-custom" >Receivable TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}</span></label>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="row-fluid" style="padding-top: 13px">
            <div class="span8" style="padding-left: 15px">
                {{ form_widget(form.comment) }}
                {{ form_errors(form.comment) }}
            </div>
            <div class="span4">
                <div class="input-append span11">
                    {#{{ form_widget(form.printFor) }}
                    {{ form_errors(form.printFor) }}#}
                    <div class="btn-group span12">
                        <input type="hidden" class="" name="printMode" id="printMode" value="">
                        <input type="hidden" class="" name="patientId" id="patientId" value="">
                        <input type="hidden" class="initialGrandTotal" name="initialDue" id="initialDue" value="">
                        <input type="hidden" name="initialDiscount" id="initialDiscount" value="">
                        <button type="submit" class="btn blue big span6 saveDiagnosticButton" value="save" name="save"  id=""><i class="icon-save"></i> Save</button>
                        <button type="submit" class="btn yellow big span6 saveDiagnosticButton" value="print" name="print"  id=""><i class="icon-print"></i> Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
{{ form_end(form) }}
