    {% block documentready %}
        {{ parent() }}
        $(document).on('click', '.showTransaction', function() {
            var id = $(this).attr('data-id');
            $('#transaction-'+id).slideToggle();
            $("i", this).toggleClass("fa-minus fa-plus");
        });

        $(document).on('change', '#process', function() {
            var process = $(this).val();
            $('.process').hide();
            if( process === "Release"){
                $('#release').show();
            }
            if( process === "Death"){
                $('#death').show();
            }
        });

    {% endblock %}

