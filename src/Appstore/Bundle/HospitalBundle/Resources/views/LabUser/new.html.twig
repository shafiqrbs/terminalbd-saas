{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Manage Lab User
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('hms_labuser') }}">Lab User</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Lab User</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Lab User</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn" href="{{ path('hms_labuser') }}"><i class="icon-th-list"></i> Lab User</a>
                    <a class="btn red" href="{{ path('hms_labuser_new') }}"><i class="icon-plus-sign"></i> Add Lab User</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="row-fluid">
                <!--/span-->
                <div class="span8">
                    <div class="control-group">
                        <label class="control-label" for="name">Lab User Name<span class="required">*</span></label>
                        <div class="controls">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span8">
                    <div class="control-group">
                        <label class="control-label" for="name">Mobile no</label>
                        <div class="controls">
                            <div class="input-icon left">
                                <i class="icon-font"></i>
                                {{ form_widget(form.mobile) }}
                                {{ form_errors(form.mobile) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span8">
                    <div class="control-group">
                        <label class="control-label" for="name">Designation</label>
                        <div class="controls">
                            <div class="input-icon left">
                                <i class="icon-font"></i>
                                {{ form_widget(form.designation) }}
                                {{ form_errors(form.designation) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span8">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="specialist">Lab Signature</label>
                                <div class="controls">
                                    {{ form_widget(form.doctorSignature) }}
                                    {{ form_errors(form.doctorSignature) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span8">
                    <div class="control-group">
                        <label class="control-label" for="name">Digital Signature</label>
                        <div class="controls">
                            <div data-provides="fileupload" class="fileupload fileupload-new">
                                <div  class="fileupload-new thumbnail">
                                    {% if(entity.webSignaturePath) %}
                                        <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webSignaturePath).resize(120,120) }}">
                                    {% else %}
                                        <img alt="" src="https://via.placeholder.com/150/FF0000/FFFFFF?Text=Signature">
                                    {% endif %}
                                </div>
                                <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                <div>
                                            <span class="btn btn-file">
                                                <span class="fileupload-new">Select image</span>
                                                <span class="fileupload-exists">Change</span>
                                                {{ form_widget(form.signatureFile) }}
                                                {{ form_errors(form.signatureFile) }}
                                            </span>
                                    <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <!--/span-->
            <div class="row-fluid"><br/></div>
            <div class="form-actions portlet box grey">
                <div class="pull-right">
                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>

    </div>
    </div>
    </div>
 <style>
     .check-list label {
         float: left;
         width: 41%;
     }
 </style>
{% endblock %}
