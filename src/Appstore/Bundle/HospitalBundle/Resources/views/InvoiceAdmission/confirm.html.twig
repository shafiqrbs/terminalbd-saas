    {% extends '::base.html.twig' %}

    {% block body %}
        <div class="container-fluid">
            <!-- BEGIN purchase_order HEADER-->
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="purchase_order-title">
                        Manage IPD # {{ entity.invoice }}
                    </h3>
                    <ul class="breadcrumb">
                        <li>
                            <i class="icon-home"></i>
                            <a href="{{ path('homepage') }}">Home</a>
                            <span class="icon-angle-right"></span>
                        </li>
                        <li>
                            <a href="{{ path('hms_invoice_admission') }}"> Manage IPD</a>
                            <span class="icon-angle-right"></span>
                        </li>
                        <li class="pull-right btn blue disabled mini">
                            <i class="fa fa-calendar"></i>c
                            {{ "now"|date("d-F-Y") }}
                        </li>
                    </ul>
                </div>
            </div>
            <!-- END purchase_order HEADER-->
            <!-- BEGIN purchase_order CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i> Manage IPD</div>
                            <div class="actions">
                                <div class="btn-group">
                                    <a class="btn" href="{{ path('hms_invoice_admission') }}"><i class="icon-th-list"></i> Admission</a>
                                    <a class="btn red" href="{{ path('hms_invoice_admission_new') }}"><i class="icon-plus"></i> New Admission</a>
                                    {% if entity.paymentStatus != 'Paid' and  entity.process not in ['Release','Death','Released','Dead']  %}
                                        <a class="btn blue" href="{{ path('hms_invoice_admission_daily_invoice',{'invoice':entity.invoice}) }}"><i class="icon-plus-sign"></i> Add Invoice</a>
                                    {% endif %}
                                    {% if entity.invoiceTransactions is not empty %}
                                        <a target="_blank" href="{{ path('hms_invoice_admission_transaction_print',{'invoice':entity.invoice}) }}" class="btn purple"><i class="icon icon-print"></i> Print</a>
                                    {% endif %}
                                    {% if invoiceTransaction is defined and invoiceTransaction is defined is not empty  %}
                                    <a class="btn" href="{{ path('hms_invoice_admission_confirm',{'id':entity.id}) }}"><i class="fa fa-fast-backward"></i> Return</a>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="portlet-body">
                                {% if entity.customer is defined and entity.customer is not empty and entity.customer.id is not empty %}
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <h4>About:</h4>
                                            <ul class="unstyled">
                                                {% if entity.customer is not empty %}<li><strong>Patient #:</strong>&nbsp;{{ entity.customer.name }}</li>{% endif %}
                                                {% if entity.customer is not empty %}<li><strong>Mobile #:</strong>&nbsp;{{ entity.customer.mobile }}</li>{% endif %}
                                                {% if entity.customer is not empty %}<li><strong>Address #:</strong>&nbsp;{{ entity.customer.address }}</li>{% endif %}
                                                {% if entity.customer is not empty and entity.customer.address is not empty   %}<li><strong>Address #:</strong>&nbsp;{{ entity.customer.address|raw }}</li>{% endif %}
                                                <li><strong>Guardian:</strong>&nbsp;{{ entity.customer.alternativeContactPerson }},{{ entity.customer.alternativeContactMobile }}</li>
                                                <li><strong>Patient Relation:</strong>&nbsp;{{ entity.customer.alternativeRelation }}</li>
                                            </ul>
                                        </div>
                                        <div class="span3">
                                            <h4>Personal:</h4>
                                            <ul class="unstyled">
                                                {% if entity.customer is not empty %}<li><strong>Patient ID #:</strong>&nbsp;{{ entity.customer.customerId }}</li>{% endif %}
                                                <li><strong>Age:</strong>&nbsp;{{ entity.customer.age }} {{ entity.customer.ageType }}</li>
                                                <li><strong>Date of Birth:</strong>&nbsp;{% if entity.customer.dob %}{{ entity.customer.dob|date('d-m-Y') }}{% endif %}</li>
                                                <li><strong>Marital:</strong>&nbsp;{{ entity.customer.maritalStatus }}</li>
                                                <li><strong>Blood Group:</strong>&nbsp;{{ entity.customer.bloodGroup }}</li>
                                                <li><strong>Referred By:</strong>&nbsp;{% if entity.referredDoctor is not empty %}{{ entity.referredDoctor.name }}{% endif %}</li>
                                                <li><strong>Marketing By:</strong>&nbsp;{% if entity.marketingExecutive is not empty %}{{ entity.marketingExecutive.marketingExecutive.username }}{% endif %}</li>

                                            </ul>
                                        </div>

                                        <div class="span3">
                                            <h4>Admission:</h4>
                                            <ul class="unstyled">
                                                <li><strong>Created by:</strong>&nbsp;{% if entity.createdBy.profile is not empty %}{{ entity.createdBy.profile.name }}{% endif %}</li>
                                                <li><strong>Patient Status:</strong>&nbsp;{{ entity.process|capitalize }}</li>
                                                <li><strong>Admission Date:</strong>&nbsp;{{ entity.created|date('d-m-Y H:i') }}</li>
                                                {% if entity.invoiceMode == 'admission' %}
                                                    <li><strong>Release Date:</strong>&nbsp;{% if entity.releaseDate is not empty %}{{ entity.releaseDate|date('d-m-Y h:i a') }}{% endif %}</li>
                                                    <li><strong>Discharge By:</strong>&nbsp;{% if entity.dischargeBy is not empty %}{{ entity.dischargeBy.profile.name }}{% endif %}</li>
                                                    <li><strong>Approved By:</strong>&nbsp;{% if entity.approvedBy is not empty %}{{ entity.approvedBy.profile.name }}{% endif %}</li>
                                                {% endif %}
                                                <li><strong>Cabin/Bed:</strong>
                                                    {% set processEdit = {'Created':'Created','Revised':'Revised','Release':'Release','Death':'Death','Admitted':'Admitted'} %}
                                                    {% if ((entity.process in processEdit and app.user.granted("ROLE_DOMAIN_HOSPITAL_ADMIN")) or (entity.process in processEdit and app.user.granted("ROLE_DOMAIN_HOSPITAL_MANAGER"))) %}
                                                        <a  data-type="select" class="editable" id="Cabin" data-name="Cabin" href="javascript:" data-source="{{ path('hms_invoice_admission_cabin_search',{'id':entity.id}) }}"  data-url="{{ path('hms_invoice_admission_cabin_inline_update') }}" data-pk="{{ entity.id }}" value="{% if entity.cabin is defined and entity.cabin is not empty  %}{{  entity.cabin.id }}{% endif %}" data-value="{% if entity.cabin is defined and entity.cabin is not empty  %}{{ entity.cabin.id }}{% endif %}" data-original-title="Enter cabin name">{% if entity.cabin is defined and entity.cabin is not empty  %}{{  entity.cabin.name }}{% endif %}</a>
                                                    {% endif %}
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="span3 invoice-payment">
                                            <h4>Doctor Details:</h4>
                                            <ul class="unstyled">
                                                <li><strong>Department:</strong>&nbsp;{% if entity.department is not empty %}{{ entity.department.name }}{% endif %}</li>
                                                <li><strong>Assign Doctor:</strong>&nbsp;{% if entity.assignDoctor is not empty %}{{ entity.assignDoctor.name }}{% endif %}</li>
                                                <li><strong>Anesthesia Doctor:</strong>&nbsp;{% if entity.anesthesiaDoctor is not empty %}{{ entity.anesthesiaDoctor.name }}{% endif %}</li>
                                                <li><strong>Assistant Doctor:</strong>&nbsp;{% if entity.assistantDoctor is not empty %}{{ entity.assistantDoctor.name }}{% endif %}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <strong>Disease: </strong>{{ entity.disease }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="portlet-body form">
                                {% include('flash-message.html.twig')  %}
                                <div class="form-actions portlet box green">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Particulars Information</div>
                                        <div class="actions">
                                            {#<a class="btn yellow" href="javascript:"><span class="fa fa-angle-double-up"></span>&nbsp;Show</a>#}
                                            {#<a target="_blank" href="{{ path('hms_invoice_admission_particular_print',{'invoice':entity.invoice}) }}"  class="btn purple"><i class="icon icon-print"></i> Print</a>#}
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid box green">
                                    {% if entity.invoiceParticulars is defined and  entity.invoiceParticulars is not empty  %}
                                        <table class="table table-bordered table-striped table-condensed flip-content ">
                                            <thead class="flip-content ">
                                            <tr class="head-blue">
                                                <th class="numeric">Si/No</th>
                                                <th class="numeric">Created</th>
                                                <th class="numeric">Code</th>
                                                <th class="numeric">Particular</th>
                                                <th class="numeric">Service</th>
                                                <th class="numeric">QTY</th>
                                                <th class="numeric">Amount</th>
                                                <th class="numeric"></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for item in entity.invoiceParticulars %}
                                                <tr id="remove-{{ item.id }}">
                                                    <td  class="numeric">{{ loop.index }}</td>
                                                    <td  class="numeric">{{ item.updated|date('d-m-Y h:i a') }}</td>
                                                    <td  class="numeric">{{ item.particular.particularCode }}</td>
                                                    <td class="numeric">{{ item.particular.name }}</td>
                                                    <td class="numeric">{{ item.particular.service.name }}</td>
                                                    <td class="numeric">{{ item.quantity }}</td>
                                                    <td class="numeric">{{ item.subTotal|number_format }}</td>
                                                    <td>
                                                       {# {% if (app.user.granted("ROLE_DOMAIN_HOSPITAL_REPORT_REQUEST")  and item.particular.service.slug == 'diagnostic' and item.process == 'Done' and item.particularDeliveredBy is empty) or (app.user.granted("ROLE_DOMAIN_HOSPITAL_REPORT_REQUEST")  and item.particular.service.slug == 'diagnostic' and item.process == 'Done' and item.particularDeliveredBy is empty)  %}
                                                            <a class="btn mini green confirm" href="javascript:" data-url="{{ path('hms_invoice_particular_delivery', {'id': item.id}) }}"><i class="icon-truck"></i>&nbsp;Delivery</a>
                                                        {% endif %}
                                                        {% if app.user.granted("ROLE_DOMAIN_HOSPITAL_REPORT_PRINT") and item.particular.service.slug == 'diagnostic' and item.process == 'Done' and item.particularDeliveredBy is not empty %}
                                                            <a target="_blank" class="btn mini blue" href="{{ path('hms_invoice_particular_report_print', {'id': item.id}) }}"><i class="icon-print"></i>&nbsp;Report </a>
                                                        {% endif %}
                                                        {% if  item.webPath is not empty %}
                                                            <br/>
                                                            <a class="btn red pull-right mini" target="_blank" href="/{{ item.webPath }}"><i class="icon-download"></i> Download</a>
                                                        {% endif %}#}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <td colspan="8" class="span12" style="border: 1px double #000"></td>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                                <td class="span2"><strong id="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Vat/Tax TK.</strong> =</span></td>
                                                <td class="span2"><strong id="vat">{{ entity.vat|number_format }}</strong></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                                <td class="span2"><strong id="vat">{{ entity.discount|number_format }}</strong></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Net Total TK.</strong> =</span></td>
                                                <td class="span2"><strong id="vat">{{ entity.total|number_format }}</strong></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Received TK.</strong> =</span></td>
                                                <td class="span2"><strong id="vat">{{ entity.payment|number_format }}</strong></td>
                                                <td></td>
                                            </tr>

                                            <tr>
                                                <td colspan="6" class="span9"><span class="pull-right"><strong>Due TK.</strong> =</span></td>
                                                <td class="span2"><strong id="vat">{{ entity.due|number_format }}</strong></td>
                                                <td></td>

                                            </tr>
                                            <tr>
                                                <td class="span2" colspan="3" ><strong>Remark</strong></td>
                                                <td colspan="5" class="span10">{{ entity.comment|raw }}</td>
                                            </tr>
                                            {% if entity.discountRequestedBy %}
                                                <tr>
                                                    <td class="span2" colspan="3" ><strong>Discounted By</strong></td>
                                                    <td class="numeric" colspan="5">{{ entity.discountRequestedBy }}</td>
                                                </tr>
                                                <tr>
                                                    <td class="numeric" colspan="3"><strong>Discounted Comment</strong></td>
                                                    <td class="numeric" colspan="5">{{ entity.discountRequestedComment }}</td>
                                                </tr>
                                            {% endif %}

                                            </tfoot>
                                        </table>
                                    {% endif %}
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                {% if entity.children  is not empty %}
                                <table class="table table-bordered table-striped table-condensed flip-content ">

                                    <thead class="flip-content ">
                                    <tr class="head-green">
                                        <th class="numeric" >Created</th>
                                        <th class="numeric" >Created By</th>
                                        <th class="numeric" >Invoice No</th>
                                        <th class="numeric" >Doctor</th>
                                        <th class="numeric" >Referred</th>
                                        <th class="numeric" >Delivery Date</th>
                                        <th class="numeric" >Net Total</th>
                                        <th class="numeric" >Payment</th>
                                        <th class="numeric" >Balance</th>
                                        <th class="numeric" >Status</th>
                                        <th class="numeric" >Report</th>
                                        <th class="numeric" >Closed</th>
                                        <th class="numeric" >Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set processArr = {'In-progress':'In-progress'} %}
                                    {% set processIntArr = ['Created','Pending','Revised','In-progress','Hold'] %}
                                    {% set processEdit = ['Created','Pending','Revised','In-progress','Hold'] %}
                                    {% set PaymentArr = {'In-progress': 'In-progress' ,'Due':'Due' ,'Paid':'Paid'} %}
                                    {% for child in entity.children %}
                                        <tr id="delete-{{ child.id }}">
                                            <td class="numeric" >{{ child.created|date('d-m-Y h:i A') }}</td>
                                            <td class="numeric" >{{ child.createdBy }}</td>
                                            <td class="numeric" >{{ child.invoice }}</td>
                                           <td class="numeric" >
                                                {% if (child.process in processEdit and child.assignDoctor is empty ) or (app.user.granted("ROLE_DOMAIN")) %}
                                                    <a  data-type="select" class="editable" id="AssignDoctor" data-name="AssignDoctor" href="javascript:" data-source="{{ path('hms_patient_assign_doctor') }}"  data-url="{{ path('hms_patient_inline_update') }}" data-pk="{{ child.id }}"  value="{% if child.assignDoctor is defined and child.assignDoctor is not empty  %}{{  child.assignDoctor.id }}{% endif %}" data-value="{% if child.assignDoctor is defined and child.assignDoctor is not empty  %}{{  child.assignDoctor.id }}{% endif %}" data-original-title="Enter doctor name">{% if child.assignDoctor is defined and child.assignDoctor is not empty  %}{{  child.assignDoctor.name }}{% endif %}</a>
                                                {% else %}
                                                    {% if child.assignDoctor is not empty %}{{ child.assignDoctor.name }} {% endif %}
                                                {% endif %}
                                            </td>
                                            <td class="numeric" >
                                                {% if (child.process in processEdit and child.assignDoctor is empty ) or (app.user.granted("ROLE_DOMAIN")) %}
                                                    <a  data-type="select" class="editable" id="ReferredDoctor" data-name="ReferredDoctor" href="javascript:" data-source="{{ path('hms_patient_assign_referred') }}"  data-url="{{ path('hms_patient_inline_update') }}" data-pk="{{ child.id }}"  value="{% if child.referredDoctor is defined and child.referredDoctor is not empty  %}{{  child.referredDoctor.id }}{% endif %}" data-value="{% if child.referredDoctor is defined and child.referredDoctor is not empty  %}{{  child.referredDoctor.id }}{% endif %}" data-original-title="Enter referred name">{% if child.referredDoctor is defined and child.referredDoctor is not empty  %}{{  child.referredDoctor.name }}{% endif %}</a>
                                                {% else %}
                                                    {% if child.referredDoctor is not empty %}{{ child.referredDoctor.name }} {% endif %}
                                                {% endif %}
                                            </td>
                                            <td class="numeric" >{{ child.deliveryDateTime }}</td>
                                            <td class="numeric" >{{ child.total }}</td>
                                            <td class="numeric" >{{ child.payment }}</td>
                                            <td class="numeric" >{{ child.due }}</td>
                                            <td class="numeric" >{{ child.paymentStatus }}</td>
                                            <td class="numeric" >
                                                {% if child.revised == 1 %}
                                                    <a target="_blank" href="{{ path('hms_invoice_reverse_show', { 'id': child.id }) }}" class="btn black mini"><i class="icon-retweet"></i> Revised</a>
                                                {% elseif child.process == 'Returned' %}
                                                    <span class="btn mini yellow">{{ child.process }}</span>
                                                {% else %}
                                                    {{ child.process }}
                                                {% endif %}
                                            </td>
                                            <td class="numeric" >{% if child.commissionApproved == 1 %}{{ child.updated|date('d-m-Y') }}{% endif %}</td>
                                            <td class="numeric" >
                                                {% if (child.paymentStatus in  PaymentArr|keys and  child.process in processIntArr and child.invoiceParticulars|length > 0) %}
                                                    <a target="_blank" href="{{ path('hms_invoice_confirm', { 'id': child.id }) }}" class="btn yellow mini" ><i class="icon-refresh"></i> Process</a>
                                                {% endif %}
                                                <a target="_blank" href="{{ path('hms_invoice_show', { 'id': child.id }) }}" class="btn mini purple"><i class="icon-eye-open tooltips" data-trigger = "hover" data-original-title = "View"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                {% endif %}
                                <div class="clearfix">&nbsp;</div>
                                {% if invoiceTransaction is defined and invoiceTransaction is defined is not empty  %}
                                    <div class="form-actions portlet box blue">
                                        <div class="portlet-title">
                                            <div class="caption"><i class="icon-money"></i>Transaction Invoice: {{ entity.invoice }}/{{ invoiceTransaction.transactionCode }}</div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    {{ form_start(form) }}
                                    {{ form_row(form._token) }}
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="row-fluid">
                                                <div class="span12">
                                                    <div class="row-fluid particular-info" >
                                                        <div class="span7">
                                                            {{ form_widget(form.particular) }}
                                                            {{ form_errors(form.particular) }}
                                                        </div>
                                                        <div class="span2">
                                                            <div class="input-append span12" style="margin-bottom:0!important">
                                                            <div class="input-group">
                                                                {{ form_widget(form.quantity) }}
                                                            </div>
                                                            </div>
                                                        </div>
                                                        <div class="span3">
                                                            <div class="input-append span11" style="margin-bottom:0!important">
                                                                <input type="hidden" id="particularId" name="particularId" value="">
                                                                {{ form_widget(form.salesPrice) }}
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn blue" id="addPatientParticular" data-url="{{ path('hms_invoice_admission_daily_invoice_add',{'id':invoiceTransaction.id}) }}" ><i class="icon-plus"></i> Add</button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                    <div class="clearfix">&nbsp;</div>
                                {{ form_start(paymentForm) }}
                                {{ form_row(paymentForm._token) }}
                                    <div class="row-fluid">
                                        <div class="span8">
                                            <table class="table table-bordered table-striped table-condensed table-fixed">
                                                <thead>
                                                <tr class="head-purple">
                                                    <th class="span1">Si/No</th>
                                                    <th class="span1">Code</th>
                                                    <th class="span4">Particular</th>
                                                    <th class="span2">Service</th>
                                                    <th class="span1">QTY</th>
                                                    <th class="span2">Unit Price</th>
                                                    <th class="span1">Amount</th>
                                                    <th class="span1"></th>
                                                </tr>
                                                </thead>
                                                <tbody id="invoiceParticulars">
                                            {% if entity.invoiceParticulars is defined and  entity.invoiceParticulars is not empty  %}
                                                {% set subTotal = 0 %}
                                                    {% for item in invoiceTransaction.admissionPatientParticulars %}
                                                        <tr id="remove-{{ item.id }}">
                                                            <td  class="span1">{{ loop.index }}</td>
                                                            <td  class="span1">{{ item.particular.particularCode }}</td>
                                                            <td class="span4">{{ item.particular.name }}</td>
                                                            <td class="span2">{{ item.particular.service.name }}</td>
                                                            <td class="span1">{% if item.particular.service.hasQuantity == 1 %}{{ item.quantity }}{% endif %}</td>
                                                            <td class="span2">{{ item.salesPrice }}</td>
                                                            <td class="span1">{{ item.subTotal|number_format }}</td>
                                                            <td class="span1"><a id="{{ item.id }}" data-id="{{ item.id }}"  data-url="{{ path('hms_invoice_admission_daily_particular_delete',{'transaction': invoiceTransaction.id ,'id': item.id }) }}" href="javascript:" class="btn red mini particularDelete" ><i class="icon-trash"></i></a></td>
                                                        </tr>
                                                    {% endfor %}
                                            {% endif %}
                                                </tbody>
                                                <tfoot>
                                                <tr>
                                                    <td colspan="8" class="span12" style="border: 1px double #000"></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="6" class="span9"><span class="pull-right"><strong>Total Amount TK.</strong> =</span></td>
                                                    <td class="span2"><strong class="total">{{ invoiceTransaction.total|number_format }}</strong></td>
                                                    <td class="span1"></td>
                                                </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <div class="span4 text-right">
                                            <div class="form-actions portlet box green">
                                                <div class="portlet-title">
                                                    <div class="caption"><i class="icon-money"></i>Payment Information</div>
                                                </div>
                                                <div class="inner-body">
                                                    <div class="row-fluid margin-bottom-5">
                                                        <div class="span12">
                                                            {{ form_widget(paymentForm.transactionMethod) }}
                                                            {{ form_errors(paymentForm.transactionMethod) }}
                                                        </div>
                                                    </div>
                                                    <div id="cartMethod" class="bankHide">
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.accountBank) }}
                                                                {{ form_errors(paymentForm.accountBank) }}
                                                            </div>
                                                        </div>
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.paymentCard) }}
                                                                {{ form_errors(paymentForm.paymentCard) }}
                                                            </div>
                                                        </div>
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.cardNo) }}
                                                                {{ form_errors(paymentForm.cardNo) }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div id="bkashMethod" class="mobileBankHide">
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.accountMobileBank) }}
                                                                {{ form_errors(paymentForm.accountMobileBank) }}
                                                            </div>
                                                        </div>
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.paymentMobile) }}
                                                                {{ form_errors(paymentForm.paymentMobile) }}
                                                            </div>
                                                        </div>
                                                        <div class="row-fluid margin-bottom-5">
                                                            <div class="span12">
                                                                {{ form_widget(paymentForm.transactionId) }}
                                                                {{ form_errors(paymentForm.transactionId) }}
                                                            </div>
                                                        </div>
                                                    </div>
