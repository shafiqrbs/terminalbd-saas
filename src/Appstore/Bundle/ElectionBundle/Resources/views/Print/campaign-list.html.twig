{% extends '::baseprint.html.twig' %}
{% block body %}
<div id="invoice">
        <div class="toolbar hidden-print">
            <div class="text-right">
                <button id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Print</button>
            </div>
            <hr>
        </div>
        <div class="invoice overflow-auto">
            <div style="min-width: 600px">
                <main>
                    <div class="row contacts">
                        <div class="col invoice-to">
                            <h2 class="to">List of Campaign Lists</h2>
                        </div>
                    </div>
                   <table border="0" cellspacing="0" cellpadding="0" style="border: 2px solid #999">
                       <thead>
                       <tr>
                           <th>Campaign Name</th>
                           <th>Campaign Date</th>
                           <th>Campaign Type</th>
                           <th>Organiser</th>
                           <th>Mobile</th>
                           <th>Location</th>
                       </tr>
                       </thead>
                       <tbody>

                       {% for entity in entities %}
                           <tr>
                               <td>{{ entity.name }}</td>
                               <td>{{ entity.eventDate|date('d-m-Y') }} {{ entity.eventTime }}</td>
                               <td>{{ entity.eventType.name }}</td>
                               <td>{% if entity.organiser is not empty %}{{ entity.organiser.name }}{% endif %}</td>
                               <td>{{ entity.mobile }}</td>
                               <td>{{ entity.location.name }}</td>
                           </tr>
                       {% endfor %}
                       </tbody>
                    </table>
                    <div style="clear: both; display: flex"></div>
                </main>
                <footer>
                    <span class="right">Developed by: {{ portal_design_development }}</span>
                </footer>
            </div>
        </div>
    </div>
<style>
    .invoice table td, .invoice table th{
        background: none;
        font-size: 13px;
    }
    .invoice .contacts {
        margin-bottom: 75px;
    }
    .invoice table th {
        white-space: nowrap;
        font-size: 16px;
        background: #000;
        font-weight: bold;
        text-transform: uppercase;
        color: #ffffff;
        height: 48px;
        line-height: 48px;

    }
    tr:nth-child(even) {background: #CCC}
    tr:nth-child(odd) {background: #FFF}
</style>
{% endblock %}

