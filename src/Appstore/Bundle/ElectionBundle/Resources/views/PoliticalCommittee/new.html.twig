
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Election Committee
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="{{ path('political_committee') }}">Manage Election Committee</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Election Committee Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('political_committee') }}"><i class="icon-th-list"></i>&nbsp; Committee</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                               <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Political Wing</label>
                                        <div class="controls">
                                            {{ form_widget(form.politicalWing) }}
                                            {{ form_errors(form.politicalWing) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                               <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Committee Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.committeeType) }}
                                            {{ form_errors(form.committeeType) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                               <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Location</label>
                                        <div class="controls">
                                            {{ form_widget(form.geoLocation) }}
                                            {{ form_errors(form.geoLocation) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Duration</label>
                                        <div class="controls">
                                            <div class="input-icon left span6">
                                                <i class="icon-calendar"></i>
                                                <input class="m-wrap span12 search-input date-picker" style="padding-right:0!important" name="startDate" id="startDate" value=" {{ "now"|date("d-m-Y") }}"  autocomplete="off" placeholder="" >
                                            </div>
                                            <div class="input-icon left span6">
                                                {{ form_widget(form.timeDuration) }}
                                                {{ form_errors(form.timeDuration) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="portlet-title">
                                    <div class="actions">
                                        <div class="btn-group">
                                            <button class="btn blue" href=""><i class="icon-save"></i>&nbsp; Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/election.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}


