
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Campaign
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="{{ path('election_event') }}">Manage Campaign</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    {% set locationType = searchForm.locationType is defined ? searchForm.locationType :'' %}
                    {% set location = searchForm.location is defined ? searchForm.location :'' %}
                    {% set startDate = searchForm.startDate is defined ? searchForm.startDate :'' %}
                    {% set endDate = searchForm.endDate is defined ? searchForm.endDate :'' %}
                    {% set keyword = searchForm.keyword is defined ? searchForm.keyword :'' %}

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Campaign Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red toggle-btn" data-trigger="hover" data-original-title="Add Campaign" href="javascript:"><i class="fa fa-angle-double-down"></i>&nbsp;Add Campaign</a>
                                <a target="_blank" class="btn blue" href="{{ path('election_event_list_print',{'locationType':locationType,'location':location,'startDate':startDate,'endDate':endDate,'keyword':keyword}) }}"><i class="icon-print"></i>&nbsp;Print</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form" id="{% if show == 'show' %}show{% else %}hide{% endif %}">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid" >
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Campaign For</label>
                                                <div class="controls">
                                                    {{ form_widget(form.electionSetup) }}
                                                    {{ form_errors(form.electionSetup) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Location</label>
                                                <div class="controls">
                                                    {{ form_widget(form.location) }}
                                                    {{ form_errors(form.location) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"><br/></div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Campaign Date</label>
                                                <div class="controls">
                                                    <div class="span6">
                                                        {{ form_widget(form.eventDate) }}
                                                        {{ form_errors(form.eventDate) }}
                                                    </div>
                                                    <div class="span6">
                                                        <div class="input-append bootstrap-timepicker-component">
                                                            <input id="eventTime" name="eventTime" class="m-wrap m-ctrl-small timepicker-default span10" type="text">
                                                            <span class="add-on"><i class="icon-time"></i></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"><br/></div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Organiser</label>
                                                <div class="controls">
                                                    {{ form_widget(form.organiser) }}
                                                    {{ form_errors(form.organiser) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix"><br/></div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Mobile</label>
                                                <div class="controls">
                                                    {{ form_widget(form.mobile) }}
                                                    {{ form_errors(form.mobile) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Email</label>
                                                <div class="controls">
                                                    {{ form_widget(form.email) }}
                                                    {{ form_errors(form.email) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Facebook Page</label>
                                                <div class="controls">
                                                    {{ form_widget(form.facebookEvent) }}
                                                    {{ form_errors(form.facebookEvent) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="clearfix"><br/></div>
                                </div>
                                <div class="span8">
                                    <div class="row-fluid">
                                        <div class="span4">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Campaign Type</label>
                                                <div class="controls">
                                                    {{ form_widget(form.eventType) }}
                                                    {{ form_errors(form.eventType) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span8">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Campaign Name</label>
                                                <div class="controls">
                                                    {{ form_widget(form.name) }}
                                                    {{ form_errors(form.name) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                            <label class="control-label" for="firstName">Content</label>
                                            <div class="controls">
                                                {{ form_widget(form.content) }}
                                                {{ form_errors(form.content) }}
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.address) }}
                                                    {{ form_errors(form.address) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="row-fluid">
                                                <div class="control-group">
                                                    <label class="control-label" >Profile Picture</label>
                                                    <div class="controls">
                                                        <div data-provides="fileupload" class="fileupload fileupload-new" style="text-align: center">
                                                            <div  class="fileupload-new thumbnail">
                                                                {% if(entity.webPath) %}
                                                                    <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webPath).resize(250,150) }}">
                                                                {% else %}
                                                                    <img alt="" src="http://www.placehold.it/250x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                                {% endif %}
                                                            </div>
                                                            <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                            <div>
                                                                <span class="btn btn-file">
                                                                    <span class="fileupload-new blue btn">Select image</span>
                                                                    <span class="fileupload-exists">Change</span>
                                                                    {{ form_widget(form.file) }}
                                                                    {{ form_errors(form.file) }}
                                                                </span>
                                                                <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                            </div>
                                                        </div>
                                                        Remove Image {{ form_widget(form.removeImage) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                        <div class="clearfix"><br/></div>
                        <div class="portlet-body flip-scroll">
                            <form class="search-form" action="" method="get" name="itemSearch">
                                <div class="row-fluid">
                                    <div class="span3">
                                        <select name="locationType" id="locationType" class="m-wrap span12">
                                            <option value="">-Select Location Type-</option>
                                            {% for type in locationTypes %}
                                                <option {% if searchForm.locationType is defined and searchForm.locationType ==  type.id %} selected="selected" {% endif %} value="{{ type.id }}">{{ type.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="span3">
                                        <input type="text" id="location" name="location"  class="m-wrap span12 select2Location" value="{% if searchForm.location is defined %}{{ searchForm.location }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.location is defined %}{{ searchForm.location }}{% else %}Enter location name{% endif %} ">
                                    </div>
                                    <div class="span3">
                                        <input type="text" id="startDate" name="startDate"  class="span6 search-input  dateCalendar m-wrap" value="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.startDate is defined %}{{ searchForm.startDate }}{% else %}Start date{% endif %} ">
                                        <input type="text" id="endDate" name="endDate"  class="span6 search-input  dateCalendar m-wrap" value="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.endDate is defined %}{{ searchForm.endDate }}{% else %}End date{% endif %} ">
                                    </div>
                                    <div class="span3">
                                        <div class="controls">
                                            <div class="input-append span12 ">
                                                <input type="text" id="keyword" name="keyword"  class="m-wrap span10 search-input" value="{% if searchForm.keyword is defined %}{{ searchForm.keyword }}{% endif %}"  autocomplete="off" placeholder="{% if searchForm.keyword is defined %}{{ searchForm.keyword }}{% else %}Enter any key words{% endif %} ">
                                                <div class="btn-group">
                                                    <button class="btn blue" type="submit"><i class="icon-search"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="numeric" >Created</th>
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Campaign Date</th>
                                    <th class="numeric" >Campaign Type</th>
                                    <th class="numeric" >Election For</th>
                                    <th class="numeric" >Organiser</th>
                                    <th class="numeric" >Mobile</th>
                                    <th class="numeric" >Location</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                                        <td class="numeric" >{{ entity.name }}</td>
                                        <td class="numeric" >{{ entity.eventDate|date('d-m-Y') }} {{ entity.eventTime }}</td>
                                        <td class="numeric" >{{ entity.eventType.name }}</td>
                                        <td class="numeric" >{% if entity.electionSetup is not empty %}{{ entity.electionSetup.electionName }}{% endif %}</td>
                                        <td class="numeric" >{% if entity.organiser is not empty %}{{ entity.organiser.name }}{% endif %}</td>
                                        <td class="numeric" >{{ entity.mobile }}</td>
                                        <td class="numeric" >{{ entity.location.name }}</td>
                                        <td class="numeric" >
                                            <div class="btn-group">
                                                <a href="{{ path('election_event_edit', {'id': entity.id }) }}" data-id="{{ entity.id }}" class="btn green mini edit" ><i class="icon-edit"></i></a>
                                                <a title="Are you sure went to delete ?" href="{{ path('election_event_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                                <a href="{{ path('election_event_member_new', { 'id': entity.id }) }}" class="btn yellow mini" >Member</a>
                                                <a data-title="{{ entity.name }}" class="btn mini view blue" href="javascript:" data-url="{{ path('election_event_show', { 'id': entity.id }) }}" ><i class="icon-eye-open"></i></a>
                                                <a data-title="{{ entity.name }}" id="" class="btn mini sms green" href="javascript:" data-url="{{ path('election_event_sms', { 'id': entity.id }) }}" >SMS</a>
                                                <a data-title="{{ entity.name }}" id="" target="_blank" class="btn mini purple" href="{{ path('election_event_print', { 'id': entity.id }) }}" >Print</a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@ElectionBundle/Resources/public/css/style.css'
    '@ElectionBundle/Resources/public/css/messagebox.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/messagebox.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}


