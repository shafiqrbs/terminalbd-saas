{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN purchase_order HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="purchase_order-title">
                    Customer : {{ entity.name }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('election_member') }}">Member Details</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Add/Edit Family Members</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>c
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END purchase_order HEADER-->
        <!-- BEGIN purchase_order CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Member Details</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('election_member_new') }}"><i class="icon-plus-sign"></i>&nbsp;New Member</a></li>
                                <a class="btn black" href="{{ path('election_member') }}"><i class="icon-th-list"></i>&nbsp;Member</a></li>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="row-fluid">
                            <div class="span3">
                                <h4>&nbsp;</h4>
                                {% if entity.webPath is not empty %}
                                    <img src="{{ image(entity.webPath).resize(250,250, 'white') }}"/>
                                {% endif %}
                            </div>
                            <div class="span9">
                                <div class="row-fluid">
                                    <div class="span4">
                                        <h4>About:</h4>
                                        <ul class="unstyled">
                                            {% if entity is not empty %}<li><strong>ID:</strong>&nbsp;{{ entity.memberId }}</li>{% endif %}
                                            {% if entity is not empty %}<li><strong>Name #:</strong>&nbsp;{{ entity.name }}</li>{% endif %}
                                            {% if entity is not empty %}<li><strong>Mobile #:</strong>&nbsp;<a href="tel:+88 {{ entity.mobile }}"> {{ entity.mobile }}</a></li>{% endif %}
                                            {% if entity is not empty %}<li><strong>Father Name</strong>&nbsp;{{ entity.fatherName }}</li>{% endif %}
                                            {% if entity is not empty %}<li><strong>Mother Name:</strong>&nbsp;{{ entity.motherName }}</li>{% endif %}
                                            {% if entity is not empty %}<li><strong>Gender:</strong>&nbsp;{{ entity.gender }}, &nbsp; <strong>Age</strong> {{ entity.age }} yrs.</li>{% endif %}
                                        </ul>
                                    </div>
                                    <div class="span4">
                                        <h4>Political:</h4>
                                        <ul class="unstyled">
                                            <li><strong>Reference Member:</strong>&nbsp;{% if entity.referenceMember is not empty %}{{ entity.referenceMember.name }}{% endif %}</li>
                                            <li><strong>Family Political Status:</strong>&nbsp;{% if entity.politicalStatus is not empty %}{{ entity.politicalStatus.name }}{% endif %}</li>
                                            <li><strong>Previous Political Party:</strong>&nbsp;{% if entity.oldPoliticalParty is not empty %}{{ entity.oldPoliticalParty.name }}{% endif %}</li>
                                            <li><strong>Political Designation:</strong>&nbsp;{% if entity.politicalDesignation is not empty %}{{ entity.politicalDesignation.name }}{% endif %}</li>
                                            <li><strong>Profession:</strong>&nbsp;{% if entity.profession is not empty %}{{ entity.profession.name }}{% endif %}</li>
                                        </ul>
                                    </div>
                                    <div class="span4">
                                        <h4>Location Information:</h4>
                                        <ul class="unstyled">
                                            <li><strong>Parliament Seat :</strong>&nbsp;{% if entity.electionConfig.parliament is not empty %}{{ entity.electionConfig.parliament.name }}{% endif %}</li>
                                            <li><strong>Village/Unit :</strong>&nbsp;{% if entity.location is not empty %}{{ entity.location.name }}{% endif %}</li>
                                            <li><strong>Vote Center :</strong>&nbsp;{% if entity.location is not empty %}{{ entity.voteCenter.name }}{% endif %}</li>
                                            <li><strong>Ward & Union :</strong>&nbsp;{% if entity.location is not empty %}{{ entity.location.wardName }}{% endif %}, {% if entity.location is not empty %}{{ entity.location.unionName }}{% endif %}</li>
                                            <li><strong>Thana/Upazila :</strong>&nbsp;{% if entity.location is not empty %}{{ entity.location.thanaName }}{% endif %}</li>
                                            <li><strong>District :</strong>&nbsp;{% if entity.electionConfig.district is not empty %}{{ entity.electionConfig.district.name }}{% endif %}</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span4">
                                        <h4>Address:</h4>
                                        <ul class="unstyled">
                                            {% if entity is not empty %}<li><strong>Address:</strong>&nbsp;{{ entity.address|raw }} {% if entity.postalCode is not empty %} -{{ entity.postalCode }} {% endif %}</li>{% endif %}
                                            <li><strong>Additional:</strong>&nbsp;{{ entity.additionalMobileNo }}</li>
                                            <li><strong>Email:</strong>&nbsp;{{ entity.email }}</li>
                                            <li><strong>Facebook ID:</strong>&nbsp;{{ entity.facebookId }}</li>
                                        </ul>
                                    </div>
                                    <div class="span4">
                                        <h4>Other Information:</h4>
                                        <ul class="unstyled">
                                            <li><strong>Family:</strong>&nbsp;{{ entity.familyMember }}</li>
                                            <li><strong>Marital Status:</strong>&nbsp;{{ entity.maritalStatus }}</li>
                                            <li><strong>Blood Group:</strong>&nbsp;{{ entity.bloodGroup }}</li>
                                            <li><strong>Education:</strong>&nbsp;{% if entity.education is not empty %}{{ entity.education.name }}{% endif %}</li>
                                        </ul>
                                    </div>
                                    <div class="span4">
                                        <h4>&nbsp;</h4>
                                        <ul class="unstyled">
                                            <li><strong>Joining Date:</strong>&nbsp;{{ entity.created|date('d-m-Y') }}</li>
                                            <li><strong>Status:</strong>&nbsp;{{ entity.process }}</li>
                                            <li><strong>Created By:</strong>&nbsp;{{ entity.createdBy }}</li>
                                            <li><strong>Approved By:</strong>&nbsp;{% if entity.approvedBy is not empty %}{{ entity.approvedBy }}{% endif %}</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <h4>Biography</h4>
                                <hr>
                                <p>{{ entity.biography|raw }}</p>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12">
                                <h4>Remark/Comment</h4>
                                <hr>
                                <p>{{ entity.remark|raw }}</p>
                            </div>
                        </div>
                        <div class="clearfix"><br/></div>
                        <div class="portlet-body flip-scroll">
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                <tr class="head-blue">
                                    <th class="numeric" >Name</th>
                                    <th class="numeric" >Mobile</th>
                                    <th class="numeric" >NID</th>
                                    <th class="numeric" >Relation</th>
                                    <th class="numeric" >Age</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody id="familyMembers">
                                {% for member in  entity.familyMembers %}
                                    <tr id="remove-{{ member.id }}">
                                        <td>{{ member.name }}</td>
                                        <td>{{ member.mobile }}</td>
                                        <td>{{ member.nid }}</td>
                                        <td>{{ member.relation }}</td>
                                        <td>{{ member.age }}</td>
                                        <td><a class="btn red mini delete" href="javascript:" data-url="{{ path('election_member_family_delete',{'id':member.id}) }}" data-id="{{ member.id }}">Delete</a> </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="clearfix"><br/></div>
                        <div class="form-actions portlet box green">
                            <div class="portlet-title">
                                <div class="caption"><i class="icon-reorder"></i>Add Family Members</div>
                            </div>
                        </div>
                        <div class="clearfix"><br/></div>
                        <form class="horizontal-form" id="familyForm" action="{{ path('election_member_family_create',{'id':entity.id}) }}" name="familyForm" method="post">
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Name</label>
                                        <div class="controls">
                                            <input type="text" class="m-wrap span12" name="name" id="name" value=""  autocomplete="off" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Mobile</label>
                                        <div class="controls">
                                            <input type="text" class="m-wrap span12" name="mobile" id="mobile" value=""  autocomplete="off" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">NID</label>
                                        <div class="controls">
                                            <input type="text" class="m-wrap span12" name="nid" id="nid" value=""  autocomplete="off" placeholder="">
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <label class="control-label" for="firstName">&nbsp;</label>
                                    <div class="input-append span12" style="margin-bottom:0!important">
                                        <div class="input-group">
                                            {%  set relations = ['Father','Mother','Brother','Sister','Spouse','Son','Daughter'] %}
                                            <select class="m-wrap span6" name="relation" id="relation">
                                                {% for relation in relations %}
                                                    <option value="{{ relation }}">{{ relation }}</option>
                                                {% endfor %}
                                            </select>
                                            <input type="number" class="m-wrap span3" name="age" id="age" value=""  autocomplete="off" placeholder="Age">
                                            <button type="submit" class="btn blue" id="" ><i class="icon-save"></i> Add</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="clearfix"><br/></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@ElectionBundle/Resources/public/js/election.js'
    '@ElectionBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
{% endblock %}