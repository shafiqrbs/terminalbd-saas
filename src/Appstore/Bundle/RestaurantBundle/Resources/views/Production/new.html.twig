{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Pre-production
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="{{ path('restaurant_production') }}">Manage Pre-production</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Pre-production</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn gray" href="{{ path('restaurant_production') }}"><i class="icon-th-list"></i> Production</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body ">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid">
                            <!--/span-->
                            <div class="span6">
                                <div class="control-group">
                                    <label class="control-label" for="name">Production Item<span class="required">*</span></label>
                                    <div class="controls">
                                        {{ form_widget(form.productionItem) }}
                                        {{ form_errors(form.productionItem) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <!--/span-->
                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="name">Initiate Qnt<span class="required">*</span></label>
                                    <div class="controls">
                                        {{ form_widget(form.quantity) }}
                                        {{ form_errors(form.quantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <!--/span-->
                            <div class="span4">
                                <div class="control-group">
                                    <label class="control-label" for="name">Receive Qnt<span class="required">*</span></label>
                                    <div class="controls">
                                        {{ form_widget(form.issueQuantity) }}
                                        {{ form_errors(form.issueQuantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <!--/span-->
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="price">Damage Qnt</label>
                                            <div class="controls">
                                                {{ form_widget(form.damageQuantity) }}
                                                {{ form_errors(form.damageQuantity) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions portlet box grey">
                            <div class="pull-right">
                                <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/datatable-pagination.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
