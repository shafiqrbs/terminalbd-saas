{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Purchase no #  <strong>{{ entity.grn }}</strong>
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('restaurant_purchase') }}">Product & Goods</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Manage Product & Goods</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">
        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Product & Goods Information</div>
            <div class="actions">
                <div class="btn-group">
                    <a class="btn" href="{{ path('restaurant_purchase') }}"><i class="icon-th-list"></i> Purchase</a>
                </div>
            </div>
        </div>
    <div class="portlet-body">
        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            <div class="row-fluid">

            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="row-fluid particular-info" >
                        <div class="span7" style="margin-left: 15px" >
                            <select id="particular" name="particular" class="span12 select2">
                                <option value="">--- Select product name ---</option>
                                {% for particular in particulars %}
                                    <option value="{{ path('restaurant_purchase_particular_search',{'id':particular.id}) }}">{{ particular.particularCode }}-{{ particular.name }} </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="span2"><input type="text" class="m-wrap span12" id="purchasePrice"  required="required" name="purchasePrice" placeholder="Purchase price" value="" maxlength="8"></div>
                        <div class="span2">
                            <div class="input-group input-append">
                                            <span class="input-group-btn">
                                               <button type="button" class="btn black btn-number" data-type="minus" data-field="quantity">
                                                        <span class="fa fa-minus"></span>
                                               </button>
                                            </span>
                                <input type="number" class="m-wrap span5 form-control input-number" id="quantity" name="quantity" value="1" min="1" max="10000">
                                <span class="input-group-btn">
                                              <button type="button" class="btn green btn-number"  data-type="plus" data-field="quantity">
                                                      <span class="fa fa-plus"></span>
                                              </button>
                                            <button type="button" class="btn yellow" id="unit" >Unit</button>
                                            </span>
                                <input type="hidden" id="particularId" name="particularId" value="">
                                <button type="button" class="btn blue" id="addParticular" data-url="{{ path('restaurant_purchase_particular_add',{'invoice':entity.id}) }}" >Add</button>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box purple">
                <div class="pull-left span12">
                    <a class="btn purple span12 pull-left" style="text-align: left" ><i class="icon-plus"></i>&nbsp;List Items</a>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>

            <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span9">
                    <div class="span12" id="particular-table">
                        <table class="table table-bordered table-striped table-condensed table-fixed">
                            <thead>
                            <tr>
                                <th class="span1">&nbsp;&nbsp;<i class="icon-list"></i></th>
                                <th class="span1">Code</th>
                                <th class="span4">Name</th>
                                <th class="span1">PP</th>
                                <th class="span1">Qnt</th>
                                <th class="span1">Unit</th>
                                <th class="span1">SubTotal</th>
                                <th class="span1"></th>
                            </tr>
                            </thead>
                            <tbody id="invoiceParticulars">
                            {% if entity.purchaseItems is not empty %}
                                {% for item in entity.purchaseItems %}
                                    <tr id="remove-{{ item.id }}">
                                        <td  class="span1">{{ loop.index }}</td>
                                        <td  class="span1">{{ item.particular.particularCode }}</td>
                                        <td class="span4">{{ item.particular.name }}</td>
                                        <td class="span1">{{ item.purchasePrice }}</td>
                                        <td class="span1">{{ item.quantity }}</td>
                                        <td class="span1">{{ item.particular.unit.name }}</td>
                                        <td class="span1">{{ item.purchaseSubTotal|number_format }}</td>
                                        <td class="span1"><a id="{{ item.id }}"  data-url="{{ path('restaurant_purchase_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <td colspan="8" class="span12" style="border: 1px double #000"></td>
                            </tr>
                            <tr>
                                <td colspan="6" class="span9"><span class="pull-right"><strong>Total TK.</strong> =</span></td>
                                <td class="span2"><strong id="subTotal">{{ entity.subTotal|number_format }}</strong></td>
                                <td class="span1"></td>
                            </tr>
                            <tr>
                                <td colspan="6" class="span9"><span class="pull-right"><strong>Discount TK.</strong> =</span></td>
                                <td class="span2"><strong id="discountAmount">{{ entity.discount|number_format }}</strong></td>
                                <td class="span1"></td>
                            </tr>
                            </tfoot>
                        </table>
                        <div class="clearfix">&nbsp;</div>
                    </div>
                </div>
                <div class="span3 payment-info">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span>Discount TK.</span> <span class="pull-right sales-right"><input class="numeric span12 m-wrap"  name="discount" id="discount" value="{{ entity.discount }}" autocomplete="off" type="text"></span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span id="balance">Due TK.</span> <span class="pull-right sales-right dueAmount" style="text-align: left; width: 110px"  id="" >{{ entity.due }}</span></label>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label class="control-label" for="firstName"><span>Payment TK.</span> <span class="pull-right sales-right">{{ form_widget(form.payment) }}
                                        </span>
                                </label>
                                <div class="controls">
                                {{ form_errors(form.payment) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="clearfix"></div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.vendor) }}
                                {{ form_errors(form.vendor) }}
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.memo) }}
                                {{ form_errors(form.memo) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                {{ form_widget(form.receiveDate) }}
                                {{ form_errors(form.receiveDate) }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(form.transactionMethod) }}
                                    {{ form_errors(form.transactionMethod) }}
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div id="cartMethod" class="bankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountBank) }}
                                        {{ form_errors(form.accountBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div id="bkashMethod" class="mobileBankHide">
                        <div class="row-fluid">
                            <div class="span12">
                                <div class="control-group">
                                    <div class="controls">
                                        {{ form_widget(form.accountMobileBank) }}
                                        {{ form_errors(form.accountMobileBank) }}
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="row-fluid">
                        <div class="span12">
                            {{ form_widget(form.remark) }}
                            {{ form_errors(form.remark) }}
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="form-actions portlet box grey">
                <input type="hidden" class="dueAmount" name="due" id="due" value="{{ entity.due }}">
                <input type="hidden" name="purchaseId" id="purchaseId" value="{{ entity.id }}">
                <input type="hidden" name="paymentTotal" id="paymentTotal" value="{{ entity.netTotal }}">
                <div class="pull-right">
                    <button type="button" class="btn blue span12 confirmSubmit" id="receiveBtn"><i class="icon-save"></i> Save</button>
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>
    <style>
        .form-horizontal .control-label{
            padding-top: 10px;
        }
        .form-horizontal .payment-info .control-label span{
            padding-left: 8px!important;
        }
    </style>
{% endblock %}

{% block cssBlock %}
{% stylesheets filter='cssrewrite'
    '@RestaurantBundle/Resources/public/css/invoice.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@RestaurantBundle/Resources/public/js/purchase.js'
    '@RestaurantBundle/Resources/public/js/approveProcess.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    $('input[name=particular]').focus();
{% endblock %}

