
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Variant Brand Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_brand') }}">Variant Brand</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Variant Brand Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Variant Brand Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('ecommerce_brand_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create New</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >Name </th>
                                    <th class="numeric" >Name(Bangla) </th>
                                    <th class="numeric" >Is Feature</th>
                                    <th class="numeric" >Status</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td class="numeric" ><a href="{{ path('ecommerce_brand_edit',{'id': entity.id })}}">{{ entity.name }}</a></td>
                                        <td class="numeric" >{{ entity.nameBn }}</td>
                                        <td class="numeric" >
                                            {% if entity.feature == 1 %}
                                                <a href="{{ path('ecommerce_brand_feature', { 'id': entity.id }) }}" class="btn blue mini" ><i class="icon-ok"></i>&nbsp;</a>
                                            {% else %}
                                                <a href="{{ path('ecommerce_brand_feature', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-remove"></i></a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >
                                            {% if entity.status == 1 %}
                                                <a href="{{ path('ecommerce_brand_status', { 'id': entity.id }) }}" class="btn blue mini" ><i class="icon-ok"></i>&nbsp;</a>
                                            {% else %}
                                                <a href="{{ path('ecommerce_brand_status', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-remove"></i></a>
                                            {% endif %}
                                        </td>
                                        <td class="numeric" >
                                            <a href="{{ path('ecommerce_brand_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                            <a title="Are you sure went to delete ?" href="{{ path('ecommerce_brand_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}



