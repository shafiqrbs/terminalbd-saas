{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN colorsize HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="colorsize-title">
                    Category Attribute Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('ecommerce_itemattribute') }}">Category Attribute</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Category Attribute Components</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END colorsize HEADER-->
        <!-- BEGIN colorsize CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Category Attribute Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn yellow" href="{{ path('ecommerce_itemattribute') }}"><i class="icon-th-list"></i>&nbsp; Category Attribute</a>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Item Category</label>
                                        <div class="controls">
                                            {{ form_widget(form.category) }}
                                            {{ form_errors(form.category) }}
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span4 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Name</label>
                                        <div class="controls">
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>

                                    </div>
                                </div>
                                <div class="span4 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Placeholder</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.placeholder) }}
                                                {{ form_errors(form.placeholder) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Tooltips</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.toolTip) }}
                                                {{ form_errors(form.toolTip) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('itemattribute_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
