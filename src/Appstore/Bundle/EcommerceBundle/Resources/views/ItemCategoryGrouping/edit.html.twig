{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN product HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="product-title">
                    Item Category Setting
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('product') }}">Item Grouping</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="javascript:">Item Category Setting</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END product HEADER-->
        <!-- BEGIN product CONTENT-->
        <div class="row-fluid">
            <div class="span12">
             <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>Item type setting</div>
            </div>

            <div class="portlet-body">
                <div class="portlet-body form">
                    {% include('flash-message.html.twig')  %}
                    <!-- BEGIN FORM-->
                    {{ form_start(form) }}
                    {{ form_row(form._token) }}
                    <!--/row-->
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span12  product-categories" id="productCategories" >
                            {{ entities|raw }}
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="form-actions portlet box grey">
                        <div class="pull-center">
                            <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <!-- END FORM-->

            </div>
            </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block documentready %}

    {{ parent() }}
    $('#productCategories').tree({
        onCheck: { node: 'expand' },
        onUncheck: { node: 'collapse' }
        }).on('change', 'input[type=checkbox]', function(){
        App.updateUniform();
    });

{% endblock %}
