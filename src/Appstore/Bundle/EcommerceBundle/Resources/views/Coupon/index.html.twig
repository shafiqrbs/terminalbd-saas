{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN ecommerce_coupon HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="ecommerce_coupon-title">
                    Coupon
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Coupon</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END ecommerce_coupon HEADER-->
        <!-- BEGIN ecommerce_coupon CONTENT-->

        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Coupon List</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('ecommerce_coupon_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create New</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">
                                <thead class="flip-content ">
                                    <tr class="head-grey">
                                        <th class="numeric" >Name </th>
                                        <th class="numeric" >Coupon Code</th>
                                        <th class="numeric" >Amount</th>
                                        <th class="numeric" >Amount Limit</th>
                                        <th class="numeric" >Valid Amount</th>
                                        <th class="numeric" >Quantity</th>
                                        <th class="numeric" >Start/End Date</th>
                                        <th class="numeric" >Percentage</th>
                                        <th class="numeric" >Status</th>
                                        <th class="numeric" >Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for entity in entities %}
                                        <tr>
                                            <td class="numeric" ><a href="{{ path('ecommerce_coupon_edit',{'id': entity.id })}}">{{ entity.name }}</a></td>
                                            <td class="numeric" >{{ entity.couponCode  }}</td>
                                            <td class="numeric" >{{ entity.amount  }}</td>
                                            <td class="numeric" >{{ entity.amountLimit  }}</td>
                                            <td class="numeric" >{{ entity.validAmount  }}</td>
                                            <td class="numeric" >{{ entity.quantity  }}</td>
                                            <td class="numeric" >{{ entity.startDate|date('d-m-Y')  }} To {{ entity.endDate|date('d-m-Y')  }}</td>
                                            <td class="numeric" >{{ entity.discountCalculation }}</td>
                                            <td class="numeric" >{% if entity.status == 1 %}Active {% else %}In-active {% endif %}</td>
                                            <td class="numeric" >
                                                <a href="{{ path('ecommerce_coupon_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                                <a href="{{ path('ecommerce_coupon_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
                                                <a title="Are you sure went to delete ?" href="{{ path('ecommerce_coupon_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
