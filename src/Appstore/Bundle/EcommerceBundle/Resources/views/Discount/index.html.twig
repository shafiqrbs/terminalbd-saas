{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN itemcolor HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="itemcolor-title">
                    Discount Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Discount</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END itemcolor HEADER-->
        <!-- BEGIN itemcolor CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Discount Information</div>
                    </div>
                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span8">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Discount Name</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                     <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Discount Name(Bangla)</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.nameBn) }}
                                                        {{ form_errors(form.nameBn) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Is Feature</label>
                                                <div class="controls">
                                                    {{ form_widget(form.feature) }}
                                                    {{ form_errors(form.feature) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Feature Item Limit</label>
                                                <div class="controls">
                                                    {{ form_widget(form.featureItem) }}
                                                    {{ form_errors(form.featureItem) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Image Background Color</label>
                                                <div class="controls">
                                                    {{ form_widget(form.bgcolor) }}
                                                    {{ form_errors(form.bgcolor) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Discount Type</label>
                                                <div class="controls">
                                                    {{ form_widget(form.type) }}
                                                    {{ form_errors(form.type) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Discount SubItem</label>
                                                <div class="controls">
                                                    {{ form_widget(form.discountSubItem) }}
                                                    {{ form_errors(form.discountSubItem) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Discount Amount</label>
                                                <div class="controls">
                                                    {{ form_widget(form.discountAmount) }}
                                                    {{ form_errors(form.discountAmount) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Category</label>
                                                <div class="controls">
                                                    {{ form_widget(form.category) }}
                                                    {{ form_errors(form.category) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Brand</label>
                                                <div class="controls">
                                                    {{ form_widget(form.brand) }}
                                                    {{ form_errors(form.brand) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                        <label class="control-label" >Feature image</label>
                                        <div class="controls">
                                            <div data-provides="fileupload" class="fileupload fileupload-new">
                                                <div  class="fileupload-new thumbnail">
                                                    {% if(entity.webPath) %}
                                                        <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="/{{ entity.webPath }}">
                                                    {% else %}
                                                        <img alt="" src="http://www.placehold.it/250x250/EFEFEF/AAAAAA&amp;text=no+image">
                                                    {% endif %}
                                                </div>
                                                <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                <div>
													<span class="btn btn-file">
                                                        <span class="fileupload-new">Select image</span>
													    <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                                    <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Discount List</div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >Name </th>
                                    <th class="numeric" >Name(Bangla) </th>
                                    <th class="numeric" >Discount Amount</th>
                                    <th class="numeric" >Type</th>
                                    <th class="numeric" >Feature</th>
                                    <th class="numeric" >SubItem</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>
                                        <td class="" ><a  data-type="text" class="editable" id="{{ entity.id }}" data-name="name" href="javascript:"   data-url="{{ path('ecommerce_discount_edit',{'id':entity.id}) }}" data-pk="{{ entity.id }}" data-value="{{ entity.name }}" data-original-title="Enter discount name">{{ entity.name }}</a></td>
                                        <td class="numeric" >{{ entity.nameBn }}</td>
                                        <td class="numeric" >{{ entity.discountAmount  }}</td>
                                        <td class="numeric" >{{ entity.type|capitalize  }}</td>
                                        <td class="numeric" >{% if entity.feature == 1 %}Active {% else %}In-active {% endif %}</td>
                                        <td class="numeric" >{% if entity.discountSubItem == 1 %}Active {% else %}In-active {% endif %}</td>
                                        <td class="numeric" >
                                            {% if entity.status == 1 %}
                                                <a href="{{ path('ecommerce_discount_status', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-ok"></i></a>
                                            {% else %}
                                                <a href="{{ path('ecommerce_discount_status', { 'id': entity.id }) }}" class="btn yellow mini" ><i class="icon-remove"></i></a>
                                            {% endif %}
                                            <a href="{{ path('ecommerce_discount_edit', { 'id': entity.id }) }}" class="btn blue mini" ><i class="icon-edit"></i></a>
                                            <a href="{{ path('ecommerce_discount_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/editable.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock  %}
{% block documentready %}
    {{ parent() }}
    EditableInit();
    $('#cp2').colorpicker({
        format: 'hex'
    });
{% endblock %}
