{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Manage Stock
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('education_stock') }}">Manage Stock</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green ">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Stock</div>
                        <div class="actions">
                            <a href="{{ path('education_stock') }}" class=" btn black"><i class="icon-th-list"></i> Stock</a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        <div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid" >
                                <div class="span4">
                                    <div class="control-group">
                                        <label class="control-label"  for="category" >Product Type<span class="required">*</span></label>
                                        <div class="controls">
                                            {{ form_widget(form.productType) }}
                                            {{ form_errors(form.productType) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span8">
                                    <div class="control-group">
                                        <label class="control-label"  for="category" >Product<span class="required">*</span></label>
                                        <div class="controls">
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid" >
                                <div class="span8">

                                </div>
                                <div class="span4">
                                    <div class="row-fluid" >
                                       <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="" >Unit</label>
                                                <div class="controls">
                                                    {{ form_widget(form.unit) }}
                                                    {{ form_errors(form.unit) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="purchasePrice">Purchase Price</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-money"></i>
                                                        {{ form_widget(form.purchasePrice) }}
                                                        {{ form_errors(form.purchasePrice) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="price">Sales Price</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-money"></i>
                                                        {{ form_widget(form.salesPrice) }}
                                                        {{ form_errors(form.salesPrice) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- END FORM-->
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
