<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Member Information</div>
    </div>
    <div class="portlet-body form">
        <div class="loader loader-double" ></div>
        <div id="memberLoad">
        <div class="clearfix">&nbsp;</div>
            <div class="row-fluid">
                <div class="span3">
                    <h4>&nbsp;</h4>
                    {% if entity.webPath is not empty %}
                        <img src="{{ image(entity.webPath).resize(250,250, 'white') }}"/>
                    {% endif %}
                </div>
                <div class="span9">
                    <div class="row-fluid">
                        <div class="span4">
                            <h4>About:</h4>
                            <ul class="unstyled">
                                {% if entity is not empty %}<li><strong>ID:</strong>&nbsp;{{ entity.customerId }}</li>{% endif %}
                                {% if entity is not empty %}<li><strong>Name #:</strong>&nbsp;{{ entity.name }}</li>{% endif %}
                                {% if entity is not empty %}<li><strong>Mobile #:</strong>&nbsp;<a href="tel:+88 {{ entity.mobile }}"> {{ entity.mobile }}</a></li>{% endif %}
                                <li><strong>Email:</strong>&nbsp;{{ entity.email }}</li>

                            </ul>
                        </div>
                        <div class="span4">
                            <h4>Personnel:</h4>
                            <ul class="unstyled">
                                <li><strong>Father name :</strong>{{ entity.fatherName }}</li>
                                <li><strong>Mother Name:</strong>&nbsp;{{ entity.motherName }}</li>
                                {% if entity.spouseName %}<li><strong>Spouse Name:</strong>&nbsp;{{ entity.spouseName }}</li>{% endif %}
                              {% if entity.spouseOccupation %}  <li><strong>Spouse Occupation:</strong>&nbsp;{{ entity.spouseOccupation }}</li>{% endif %}
                            {% if entity.spouseDesignation %}    <li><strong>Spouse Designation:</strong>&nbsp;{{ entity.spouseDesignation }}</li>{% endif %}
                            </ul>
                        </div>
                        <div class="span4">
                            <h4>Address:</h4>
                            <ul class="unstyled">
                                {% if entity is not empty %}<li><strong>Address:</strong>&nbsp;{{ entity.address|raw }} {% if entity.postalCode is not empty %} -{{ entity.postalCode }} {% endif %}</li>{% endif %}
                                <li><strong>Additional:</strong>&nbsp;{{ entity.additionalPhone }}</li>
                                <li><strong>Facebook ID:</strong>&nbsp;{{ entity.facebookId }}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row-fluid">

                        <div class="span4">
                            <h4>Educational Information:</h4>
                            <ul class="unstyled">
                                <li><strong>Batch:</strong>&nbsp;{{ entity.studentBatch }}</li>
                                <li><strong>Batch Year:</strong>&nbsp;{{ entity.batchYear }}</li>
                                <li><strong>Profession:</strong>&nbsp;{% if entity.profession is not empty %}{{ entity.profession }}{% endif %}</li>
                                <li><strong>Designation:</strong>&nbsp;{% if entity.memberDesignation is not empty %}{{ entity.memberDesignation }}{% endif %}</li>
                            </ul>
                        </div>
                        <div class="span4">
                            <h4>Other Information:</h4>
                            <ul class="unstyled">
                                <li><strong>Marital Status:</strong>&nbsp;{{ entity.maritalStatus }}</li>
                                <li><strong>Blood Group:</strong>&nbsp;{{ entity.bloodGroup }}</li>
                                <li><strong>Religion:</strong>&nbsp;{{ entity.religion }}</li>
                            </ul>
                        </div>
                        <div class="span4">
                            <h4>System Status:</h4>
                            <ul class="unstyled">
                                <li><strong>Joining Date:</strong>&nbsp;{{ entity.created|date('d-m-Y') }}</li>
                                <li><strong>Status:</strong>&nbsp;{{ entity.process }}</li>
                                <li><strong>Checked By:</strong>&nbsp;{% if entity.checkedBy is not empty %}{{ entity.checkedBy }}{% endif %}</li>
                                <li><strong>Approved By:</strong>&nbsp;{% if entity.approvedBy is not empty %}{{ entity.approvedBy }}{% endif %}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <h4>Biography</h4>
                    <hr>
                    <p>{{ entity.about|raw }}</p>
                </div>
            </div>
            <div class="clearfix"><br/></div>
            <div class="form-actions portlet box blue">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>List of Ledgers</div>
                </div>
            </div>
            <div class="clearfix"><br/></div>
            <div class="portlet-body flip-scroll">
                <table class="table  flip-content row-scroll">
                    <thead class="flip-content ">
                    <tr class="head-green">
                        <th class="numeric" >Created</th>
                        <th class="numeric" >Invoice</th>
                        <th class="numeric" >Method</th>
                        <th class="numeric" >NetTotal</th>
                        <th class="numeric" >Payment</th>
                        <th class="numeric" >Due</th>
                        <th class="numeric" >Process</th>
                    </tr>
                    </thead>
                    <tbody class="scrolling-box">
                    {% for inv in entity.businessInvoices %}
                        <tr id="delete-{{ inv.id }}">
                            <td class="numeric" >{{ inv.created|date('d-m-Y') }}</td>
                            <td class="numeric" >{{ inv.invoice }}</td>
                            <td class="numeric" >{% if inv.transactionMethod %}{{ inv.transactionMethod.name }}{% endif %}</td>
                            <td class="numeric" >{{ inv.total }}</td>
                            <td class="numeric" >{{ inv.received }}</td>
                            <td class="numeric" >{{ inv.total - inv.received }}</td>
                            <td class="numeric" > {{ inv.process }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="clearfix">&nbsp;</div>
        </div>
    </div>
</div>


