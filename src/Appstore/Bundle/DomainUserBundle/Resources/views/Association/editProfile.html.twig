{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                 Manage of {{ entity.name }}
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('domain_association') }}">Member List</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn gray" href="{{ path('domain_association') }}"><i class="icon-th-list"></i>&nbsp;Member</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" >Full name<span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.name) }}
                                                {{ form_errors(form.name) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Father Name</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.fatherName) }}
                                                {{ form_errors(form.fatherName) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Father Occupation</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.fatherDesignation) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/row-->
                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Mobile<span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.mobile) }}
                                                {{ form_errors(form.mobile) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Present Country<span class="required">*</span></label>
                                        <div class="controls">
                                            {{ form_widget(form.country) }}
                                            {{ form_errors(form.country) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Mother Name</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.motherName) }}
                                                {{ form_errors(form.motherName) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Mother Occupation</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.motherDesignation) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <div class="row-fluid">
                                <!--/span-->
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Facebook ID</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-envelope"></i>
                                                {{ form_widget(form.facebookId) }}
                                                {{ form_errors(form.facebookId) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Email Address</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-envelope"></i>
                                                {{ form_widget(form.email) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Additional Phone</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-phone"></i>
                                                {{ form_widget(form.additionalPhone) }}
                                                {{ form_errors(form.additionalPhone) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >NID/Passport</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.nid) }}
                                                {{ form_errors(form.nid) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--/row-->
                            <!--/row-->
                            <div class="clearfix">&nbsp;</div>
                            <!--/row-->
                            <div class="form-actions portlet box yellow">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Academic</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <!--/span-->
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Batch <span class="required">*</span></label>
                                        <div class="controls">
                                            {{ form_widget(form.studentBatch) }}
                                            {{ form_errors(form.studentBatch) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >SSC Passing Year</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.ssc) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" >Occupation <span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.profession) }}
                                            {{ form_errors(form.profession) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           <div class="row-fluid">
                                <!--/span-->
                               <div class="span3">
                                   <div class="control-group">
                                       <label class="control-label" >Study Year <span class="required">*</span></label>
                                       <div class="controls">
                                           {{ form_widget(form.batchYear) }}
                                           {{ form_errors(form.batchYear) }}
                                       </div>
                                   </div>
                               </div>
                               <div class="span3">
                                   <div class="control-group">
                                       <label class="control-label" >HSC Passing Year</label>
                                       <div class="controls">
                                           <div class="input-icon left">
                                               <i class="icon-font"></i>
                                               {{ form_widget(form.hsc) }}
                                           </div>
                                       </div>
                                   </div>
                               </div>
                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" >Designation</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.memberDesignation) }}
                                                {{ form_errors(form.memberDesignation) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--/row-->
                            <div class="clearfix">&nbsp;</div>
                            <!--/row-->
                            <div class="form-actions portlet box grey">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Personnel</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <div class="span6 ">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Date of Birth</label>
                                                <div class="controls">
                                                    {{ form_widget(form.dob) }}
                                                    {{ form_errors(form.dob) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Blood Group</label>
                                                <div class="controls">
                                                    {{ form_widget(form.bloodGroup) }}
                                                    {{ form_errors(form.bloodGroup) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" >Spouse Name</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.spouseName) }}
                                                        {{ form_errors(form.spouseName) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6 ">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Marital Status</label>
                                                <div class="controls">
                                                    {{ form_widget(form.maritalStatus) }}
                                                    {{ form_errors(form.maritalStatus) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Religion</label>
                                                <div class="controls">
                                                    {{ form_widget(form.religion) }}
                                                    {{ form_errors(form.religion) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">

                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Spouse Occupation</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.spouseOccupation) }}
                                                        {{ form_errors(form.spouseOccupation) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Spouse Designation</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.spouseDesignation) }}
                                                        {{ form_errors(form.spouseDesignation) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" >Present Address<span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-map-marker"></i>
                                                {{ form_widget(form.address) }}
                                                {{ form_errors(form.address) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" >Permanent Address</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-map-marker"></i>
                                                {{ form_widget(form.permanentAddress) }}
                                                {{ form_errors(form.permanentAddress) }}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--/row-->

                            <div class="form-actions portlet box green">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>About</div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">

                            </div>
                            <div class="row-fluid">
                                <div class="span9">
                                    <div class="control-group">
                                        <label class="control-label" >About me</label>
                                        <div class="controls">
                                            {{ form_widget(form.about) }}
                                            {{ form_errors(form.about) }}
                                            <p class="help">You can write something about yourself.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div data-provides="fileupload" class="fileupload fileupload-new">
                                        <div style="width: 200px; height: 150px;" class="fileupload-new thumbnail">
                                            {% if entity.webPath is not empty %}
                                                <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="/{{ entity.webPath }}">
                                            {% else %}
                                                <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                            {% endif %}
                                        </div>
                                        <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                        <div>
													<span class="btn blue btn-file">
                                                        <span class="fileupload-new">Upload Profile Picture</span>
													    <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                            <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="clearfix">&nbsp;</div>
                                                       <!--/row-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                    <button type="reset" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}



