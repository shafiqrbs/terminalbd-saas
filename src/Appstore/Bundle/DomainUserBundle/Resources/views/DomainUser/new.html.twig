{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage of Employee
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('domain_user') }}">Employee Lists</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">{{ globalOption.name }}</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('domain') }}"><i class="icon-th-list"></i>&nbsp;Employees</a>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig') %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <!--/row-->

                            <!--/row-->

                            <!--/row-->

                            <!--/row-->
                            <!--/row-->
                            <div class="clearfix">&nbsp;</div>
                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">Full name<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.profile.name) }}
                                                        {{ form_errors(form.profile.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Designation</label>
                                                <div class="controls">
                                                    {{ form_widget(form.profile.designation) }}
                                                    {{ form_errors(form.profile.designation) }}
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">User name<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-user"></i>
                                                        {{ form_widget(form.username) }}
                                                        {{ form_errors(form.username) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">Password<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-lock"></i>
                                                        {{ form_widget(form.plainPassword.first) }}
                                                        {{ form_errors(form.plainPassword.first) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">Email<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-envelope"></i>
                                                        {{ form_widget(form.email) }}
                                                        {{ form_errors(form.email) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">Re-Password</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-lock"></i>
                                                        {{ form_widget(form.plainPassword.second) }}
                                                        {{ form_errors(form.plainPassword.second) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Mobile</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.profile.mobile) }}
                                                        {{ form_errors(form.profile.mobile) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label"><br/></label>
                                                <div class="controls">
                                                    Enabled
                                                    {{ form_widget(form.enabled) }}
                                                    {{ form_errors(form.enabled) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="span6">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="form-group">
                                                <label for="{{ form.roles.vars.id }}" class="control-label col-md-2">
                                                    Access Control Role:
                                                </label>
                                                <div class="col-md-9">
                                                    <div class="input-icon right">
                                                        <div class="controls">
                                                            {{ form_errors(form.roles) }}
                                                            {{ form_widget(form.roles, {'attr': {'class': 'form-control multi-select2 span6 m-wrap'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="form-group">
                                                <label for="{{ form.roles.vars.id }}" class="control-label col-md-2">
                                                    Android Control Roles:
                                                </label>
                                                <div class="col-md-9">
                                                    <div class="input-icon right">
                                                        <div class="controls">
                                                            {{ form_errors(form.appRoles) }}
                                                            {{ form_widget(form.appRoles, {'attr': {'class': 'form-control multi-select2 span6 m-wrap'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <!--/row-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $("select.multi-select2").multiSelect();
{% endblock %}

