{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_customer HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_customer-title">
                    Create new customer
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('domain_customer') }}">Customer List</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Create new customer</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_customer HEADER-->
        <!-- BEGIN inventory_customer CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Customer Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <li><a class="btn black" href="{{ path('domain_customer') }}"><i class="icon-th-list"></i>&nbsp;Customer</a></li>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Name</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-user"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="mobile">Mobile</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-phone"></i>
                                                        {{ form_widget(form.mobile) }}
                                                        {{ form_errors(form.mobile) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="email">Facebook ID</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-facebook"></i>
                                                        {{ form_widget(form.facebookId) }}
                                                        {{ form_errors(form.facebookId) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="email">Email</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-envelope"></i>
                                                        {{ form_widget(form.email) }}
                                                        {{ form_errors(form.email) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="location">Location</label>
                                                <div class="controls">
                                                    {{ form_widget(form.location) }}
                                                    {{ form_errors(form.location) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="gender">Gender</label>
                                                <div class="controls">
                                                    {{ form_widget(form.gender) }}
                                                    {{ form_errors(form.gender) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="ageGroup">Age Group</label>
                                                <div class="controls">
                                                    {{ form_widget(form.ageGroup) }}
                                                    {{ form_errors(form.ageGroup) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.address) }}
                                                    {{ form_errors(form.address) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>


                            <div class="clearfix"><br/></div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('inventory_customer_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
