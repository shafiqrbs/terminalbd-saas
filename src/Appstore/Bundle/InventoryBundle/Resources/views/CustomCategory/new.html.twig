{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN category HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="category-title">
                Form Components
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('inventory_category') }}">Category</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Form Components</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END category HEADER-->
    <!-- BEGIN category CONTENT-->
    <div class="row-fluid">
    <div class="span12">

    <div class="portlet box green tabbable">

    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
        <div class="actions">
            <div class="btn-group">
                <a class="btn" href="{{ path('inventory_category') }}"><i class="icon-list"></i>&nbsp; Category</a>
            </div>
        </div>
    </div>

        <div class="portlet-body form">
            {% include('flash-message.html.twig')  %}
            <!-- BEGIN FORM-->
            {{ form_start(form) }}
            {{ form_row(form._token) }}

            <div class="row-fluid">
                <div class="span6 ">
                    <div class="control-group">
                        <label class="control-label" >Parent</label>
                        <div class="controls">
                            <div class="input-icon left">
                                {{ form_widget(form.parent) }}
                                {{ form_errors(form.parent) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6 ">
                    <div class="control-group">
                        <label class="control-label" for="firstName">Category <span class="required">*</span></label>
                        <div class="controls">
                            <div class="input-icon left">
                                <i class="icon-font"></i>
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!--/span-->
           </div>

            <div class="form-actions portlet box grey">
                <div class="pull-center">
                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                    {% if(entity.id > 0 ) %}
                        <a href="{{ path('inventory_category_delete',{'id': entity.id} ) }}"  class="btn red confirm" ><i class="icon-remove"></i> Delete</a>
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
            <!-- END FORM-->
        </div>
    </div>

    </div>
    </div>
    </div>
{% endblock %}
