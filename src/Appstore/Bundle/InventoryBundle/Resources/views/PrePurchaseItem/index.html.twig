{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Pre-purchase Item Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('prepurchaseitem') }}">Pre-purchase Item</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Pre-purchase Item Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Pre-purchase Item Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('prepurchaseitem_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >Cretaed</th>
                                    <th class="numeric" >Product Name</th>
                                    <th class="numeric" >RequestBy</th>
                                    <th class="numeric" >Request Qnt</th>
                                    <th class="numeric" >Available</th>
                                    <th class="numeric" >Status</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}
                                    <tr>

                                        <td class="numeric" >{{ entity.created|date('d-m-Y') }}</td>
                                        <td class="numeric" ><a href="{{ path('prepurchaseitem_edit',{'id': entity.id })}}">{{ entity.masterItem.name }}</a></td>
                                        <td class="numeric" >{{ entity.requestBy }}</td>
                                        <td class="numeric" >{{ entity.requestQnt }}</td>
                                        <td class="numeric" >{{ entity.availableDate|date('d-m-Y') }}</td>
                                        <td class="numeric" ><a href="{{ path('prepurchaseitem_status',{'id':entity.id}) }}">{% if entity.status == 1 %}Active {% else %}In-active {% endif %}</a> </td>
                                        <td class="numeric" >
                                            <a href="{{ path('prepurchaseitem_edit', { 'id': entity.id }) }}" class="btn green mini" ><i class="icon-edit"></i></a>
                                            <a href="{{ path('prepurchaseitem_show', { 'id': entity.id }) }}" class="btn purple mini" ><i class="icon-eye-open"></i></a>
                                            <a title="Are you sure went to delete ?" href="{{ path('prepurchaseitem_delete', { 'id': entity.id }) }}" class="btn red mini" ><i class="icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}



