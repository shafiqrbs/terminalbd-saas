{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN item HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="item-title">
                   New Customer
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_serviceitem') }}">Order</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">New Customer</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END item HEADER-->
        <!-- BEGIN item CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('inventory_serviceitem') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('inventory_serviceitem_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('inventory_serviceitem_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <div class="row-fluid " id="purchaseItemx">

                        </div>
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid">
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Assign To</label>
                                            <div class="controls">
                                                {{ form_widget(form.assignTo) }}
                                                {{ form_errors(form.assignTo) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="name">Customer Name</label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-user"></i>
                                                    {{ form_widget(form.customer.name) }}
                                                    {{ form_errors(form.customer.name) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="name">Mobile</label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-phone"></i>
                                                    {{ form_widget(form.customer.mobile) }}
                                                    {{ form_errors(form.customer.mobile) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="name">Email</label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-envelope"></i>
                                                    {{ form_widget(form.customer.email) }}
                                                    {{ form_errors(form.customer.email) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="name">Gender</label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    {{ form_widget(form.customer.gender) }}
                                                    {{ form_errors(form.customer.gender) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="name">Age Group</label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    {{ form_widget(form.customer.ageGroup) }}
                                                    {{ form_errors(form.customer.ageGroup) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br/>

                        <div class="form-actions portlet box grey">
                            <div class="pull-right">
                                <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                <button type="reset" class="btn blue"><i class="icon-refresh"></i> Reset</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>

            </div>
        </div>
    </div>
    <style>
        .popover{
            width: 250px !important;
        }
        input[class*="span"].m-wrap {
            height: 33px!important;
        }

        .select2-container-multi .select2-choices .select2-search-field input{
            height: auto!important;
        }
        input[class*="span"].m-wrap {
            height: 33px!important;
        }

        .select2-container-multi .select2-choices .select2-search-field input{
            height: auto!important;
            min-height: 20px !important;
        }
        .row-fluid [class*="span"]{
            min-height: 33px !important;
        }
    </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@InventoryBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@InventoryBundle/Resources/public/js/item.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    InventoryItemEditPage({{ entity.id ? entity.id : 0 }});
{% endblock %}