
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    {{ entity.name }} Details
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('inventory_product') }}">Master Item</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">{{ entity.name }} Details</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Master Item</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">

                                    <li><a href="{{ path('inventory_product_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('inventory_product') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    <li><a href="{{ path('inventory_product_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    <li><a href="{{ path('inventory_product_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>


                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form form-horizontal">

                            <div class="row-fluid">
                                <div class="span12">
                                     {% include('flash-message.html.twig')  %}
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Type</label>
                                        <div class="controls control-custom">{% if entity.category is not empty %}{{ entity.category.name }}{% endif %}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Item name</label>
                                        <div class="controls control-custom">{{ entity.name }}</div>
                                    </div>
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Item code</label>
                                        <div class="controls control-custom">{{ entity.code }}</div>
                                    </div>
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Item unit</label>
                                        <div class="controls control-custom">{{ entity.unit }}</div>
                                    </div>
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Status</label>
                                        <div class="controls control-custom">{% if entity.status == 1 %} Publish {% else %} Un-publish {% endif %}</div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
