{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_warehouse HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_warehouse-title">
                    Inventory configuration
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>

                    <li><a href="#">Inventory configuration </a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_warehouse HEADER-->
        <!-- BEGIN inventory_warehouse CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Inventory configuration Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <div class="clearfix"><br/></div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid box green">
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Currency</span><span class="span6">{{ form_widget(form.currency) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Sales Mode</span><span class="span6">{{ form_widget(form.salesMode) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <label class="control-label" for="">Address</label>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    {{ form_widget(form.address) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <label class="control-label" for="">Print Footer Text</label>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    {{ form_widget(form.printFooterText) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <label class="control-label" for="">POS print Note</label>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    {{ form_widget(form.invoiceNote) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Auto Payment</span><span class="span5">{{ form_widget(form.autoPayment) }}
                                                            {{ form_errors(form.autoPayment) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">System Reset</span><span class="span5">{{ form_widget(form.systemReset) }}
                                                            {{ form_errors(form.systemReset) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Empty Item Sales</span><span class="span5">{{ form_widget(form.emptySales) }}
                                                            {{ form_errors(form.emptySales) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Is POS</span><span class="span5">{{ form_widget(form.isPos) }}
                                                            {{ form_errors(form.isPos) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isInvoice"><span class="span5">Is Invoice</span><span class="span5">{{ form_widget(form.isInvoice) }}
                                                            {{ form_errors(form.isInvoice) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Android Sales</span><span class="span5">{{ form_widget(form.androidSales) }}
                                                            {{ form_errors(form.androidSales) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Show Sales Price</span><span class="span5">{{ form_widget(form.showSalesPrice) }}
                                                            {{ form_errors(form.showSalesPrice) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Sales Mode</span><span class="span5">{{ form_widget(form.deliveryProcess) }}
                                                        </span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Sales return day</span><span class="span5"> {{ form_widget(form.salesReturnDayLimit) }}</span></label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="control-group">
                                                <label class="control-label" >Logo</label>
                                                <div class="controls">
                                                    <div data-provides="fileupload" class="fileupload fileupload-new">
                                                        <div  class="fileupload-new thumbnail">
                                                            {% if(entity.webPath) %}
                                                                <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webPath).resize(250,150) }}">
                                                            {% else %}
                                                                <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                            {% endif %}
                                                        </div>
                                                        <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                        <div>
                                                        <span class="btn btn-file">
                                                            <span class="fileupload-new blue btn">Select image</span>
                                                            <span class="fileupload-exists">Change</span>
                                                            {{ form_widget(form.file) }}
                                                            {{ form_errors(form.file) }}
                                                        </span>
                                                            <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" ></label>
                                                    <div class="controls">
                                                        <div class="input-icon left">
                                                            Remove Image {{ form_widget(form.removeImage) }}
                                                            {{ form_errors(form.removeImage) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions portlet box blue">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Stock Keeping Unit(SKU) Format</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                   <div class="span4">
                                        <h5><strong>Product Attribute</strong></h5>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Product Attribute</span><span class="span5">{{ form_widget(form.isAttribute) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="cartImage"><span class="span5">Cart Image</span><span class="span5">{{ form_widget(form.cartImage) }}</span></label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Using Barcode for</span><span class="span6">{{ form_widget(form.usingBarcode) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <h5><strong>Stock Keeping Unit(SKU) Format</strong></h5>
                                        <div class="row-fluid">
                                            <div class="span12">

                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Category</span><span class="span5">{{ form_widget(form.isCategory) }}
                                                        {{ form_errors(form.isCategory) }}</span></label>
                                                    <label class="control-label" for="vatEnable"><span class="span5">Size/Weight</span><span class="span5">  {{ form_widget(form.isSize) }}
                                                        {{ form_errors(form.isSize) }}</span></label>
                                                    <label class="control-label" for="vatEnable"><span class="span5">Color/Shape</span><span class="span5">{{ form_widget(form.isColor) }}
                                                            {{ form_errors(form.isColor) }}</span></label>
                                                    <label class="control-label" for="isModel"><span class="span5">Model</span><span class="span5">{{ form_widget(form.isModel) }}
                                                            {{ form_errors(form.isModel) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                       <div class="row-fluid">
                                           <div class="span12">
                                               <div class="control-group">
                                                   <label class="control-label" for="isAttribute"><span class="span5">Brand/Vendor</span><span class="span6"><select class="span8" name="brandvendor">
                                                            <option>--Select One--</option>
                                                            <option {% if entity.isVendor == 1 %} selected="selected" {% endif %} value="vendor">Vendor</option>
                                                            <option {% if entity.isBrand == 1 %} selected="selected" {% endif %} value="brand">Brand</option>
                                                        </select></span></label>
                                               </div>
                                           </div>
                                       </div>
                                    </div>
                                    <div class="span4">
                                        <h5><strong>Vat Reg. & Setup</strong></h5>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Vat Enable</span><span class="span5">{{ form_widget(form.vatEnable) }}
                                                            {{ form_errors(form.vatEnable) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Vat Registration No</span><span class="span6">{{ form_widget(form.vatRegNo) }}
                                                            {{ form_errors(form.vatRegNo) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Vat Mode</span><span class="span6">{{ form_widget(form.vatMode) }}
                                                            {{ form_errors(form.vatMode) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Vat Percentage</span>
                                                        <span class="span5"> {{ form_widget(form.vatPercentage) }}
                                                            {{ form_errors(form.vatPercentage) }}%</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="span4">
                                        <h5><strong>Barcode Print</strong></h5>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for=""><span class="span5">Barcode Print</span><span class="span5">{{ form_widget(form.barcodePrint) }}
                                                            {{ form_errors(form.barcodePrint) }}</span></label>
                                                 </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for=""><span class="span5">Barcode Price Hide</span><span class="span5">{{ form_widget(form.barcodePriceHide) }}
                                                            {{ form_errors(form.barcodePriceHide) }}</span></label>
                                                 </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Shop Name</span><span class="span6">{{ form_widget(form.shopName) }}</span></label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">

                                                <div class="control-group">
                                                    <label class="control-label" for="vatEnable"><span class="span5">Item Name</span><span class="span5">{{ form_widget(form.barcodeItem) }}
                                                            {{ form_errors(form.barcodeItem) }}</span></label>
                                                    <label class="control-label" for="vatEnable"><span class="span5">Color/Shape</span><span class="span5">{{ form_widget(form.barcodeColor) }}
                                                            {{ form_errors(form.barcodeColor) }}</span></label>
                                                    <label class="control-label" for="vatEnable"><span class="span5">Size/Weight</span><span class="span5">  {{ form_widget(form.barcodeSize) }}
                                                            {{ form_errors(form.barcodeSize) }}</span></label>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="isAttribute"><span class="span5">Brand/Vendor</span><span class="span6">
                                                             {{ form_widget(form.barcodeBrandVendor) }}
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions portlet box blue">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Barcode Setup</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span4">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Barcode Per Column</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodePerRow) }}
                                                        {{ form_errors(form.barcodePerRow) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span8">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Barcode Text</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeText) }}
                                                        {{ form_errors(form.barcodeText) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span4">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Thickness</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeThickness) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span4">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Font Size</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeFontSize) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span4">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Scale</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeScale) }}
                                                        {{ form_errors(form.barcodeScale) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="span2">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Height</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeHeight) }}
                                                        {{ form_errors(form.barcodeHeight) }}.px
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Width</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeWidth) }}
                                                        {{ form_errors(form.barcodeWidth) }}.px
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Margin Top</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodeMargin) }}
                                                        {{ form_errors(form.barcodeMargin) }}.px
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Padding</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.barcodePadding) }}
                                                        {{ form_errors(form.barcodePadding) }}.px
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">

                                    </div>
                                </div>
                              </div>
                            <div class="form-actions portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Print & Invoice Manage </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label " for="vatPercentage">Printer &nbsp;</label>
                                        <div class="control">
                                            {{ form_widget(form.printer) }}
                                            {{ form_errors(form.printer) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">&nbsp;</label>
                                        <div class="controls">
                                            Print Logo&nbsp;
                                            {{ form_widget(form.invoicePrintLogo) }}
                                            {{ form_errors(form.invoicePrintLogo) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">&nbsp;</label>
                                        <div class="controls">
                                            Print Footer Text&nbsp;
                                            {{ form_widget(form.isPrintFooter) }}
                                            {{ form_errors(form.isPrintFooter) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">&nbsp;</label>
                                        <div class="controls">
                                            Custom Print&nbsp;{{ form_widget(form.customPrint) }}
                                            {{ form_errors(form.customPrint) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span2">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Left Margin</label>
