{% set name = searchForm.name is defined ? searchForm.name :'' %}
{% set month = searchForm.month is defined ? searchForm.month :"now"|date("F") %}
{% set year = searchForm.year is defined ? searchForm.year :"now"|date("Y") %}

<table class="table">
    <thead>
    <tr>
        <td class="pull-center"><h2>{{ option.name }}</h2></td>
    </tr>
    <tr>
        <th class="pull-center"><h3><strong>{{ name|upper }} LEDGER STATEMENT</strong></h3></th>
    </tr>
    </thead>
</table>
<table class="table">
    <thead class="flip-content ">
    <tr>
        <th class="pull-center" colspan="9"><h5><strong>DATE WISE STATEMENT SHEET: {{ month|capitalize }} , {{ year }}</strong></h5></th>
    </tr>
    <tr class="head-green">
        <th class="numeric" >Invoice ID</th>
        <th class="numeric" >Date</th>
        <th class="numeric" >Created By</th>
        <th class="numeric" >Customer/Vendor</th>
        <th class="numeric" >Opening QTY</th>
        <th class="numeric" >QTY</th>
        <th class="numeric" >Closing QTY</th>
        <th class="numeric" >Process</th>
    </tr>
    </thead>
    <tbody>
    {% for item in pagination %}
        <tr>
            <td class="numeric" >{{ item.salesInvoice }}</td>
            <td class="numeric" >{{ item.created|date('d-m-Y') }}</td>
            <td class="numeric" >{{ item.createdBy }}</td>
            <td class="numeric" >{{ item.createdBy }}</td>
            <td class="numeric" >{{ item.openingQuantity }}</td>
            <td class="numeric" >{% if item.quantity > 0 %}{{ item.quantity }}{% else %}({{ item.quantity|abs }}){% endif %}</td>
            <td class="numeric" >{{ item.closingQuantity }}</td>
            <td class="numeric" >{{ item.process }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

