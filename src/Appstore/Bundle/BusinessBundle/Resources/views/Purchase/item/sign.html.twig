{% if entity.purchaseItems is not empty %}
    {% for item in entity.purchaseItems %}
        <tr id="remove-{{ item.id }}">
            <td>{{ loop.index }}</td>
            <td>{{ item.businessParticular.particularCode }}</td>
            <td>{{ item.businessParticular.name }}</td>
            <td>{{ item.purchasePrice }}</td>
            <td>{{ item.height }} x {{ item.width }}</td>
            <td>{{ item.subQuantity }}</td>
            <td>{{ item.quantity }}</td>
            <td>{% if item.businessParticular.unit is not empty %}{{ item.businessParticular.unit.name }}{% endif %}</td>
            <td>{{ item.purchaseSubTotal|number_format }}</td>
            <td><a id="{{ item.id }}" title="Are you sure went to delete ?" data-url="{{ path('business_purchase_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
        </tr>
    {% endfor %}
{% endif %}