{% if entity.purchaseItems is not empty %}
    {% for item in entity.purchaseItems %}
        <tr id="remove-{{ item.id }}">
            <td  class="span1">{{ loop.index }}</td>
            <td  class="span1">{{ item.businessParticular.particularCode }}</td>
            <td class="span3">{{ item.businessParticular.name }}</td>
            <td class="span1">{% if item.wearhouse %}{{ item.wearhouse.name }}{% endif %}</td>
            <td class="span1">{{ item.businessParticular.salesPrice }}</td>
            <td class="span1"><input type="text" class="numeric td-inline-input-qnt itemUpdate" autocomplete="off" id="price-{{ item.id }}" name="price-{{ item.id }}" data-id="{{ item.id }}" value="{{ item.purchasePrice }}" placeholder="0"></td>
            <td class="span1"><input type="text" class="numeric td-inline-input-qnt itemUpdate" autocomplete="off" id="quantity-{{ item.id }}" name="quantity-{{ item.id }}" data-id="{{ item.id }}" value="{{ item.quantity }}" placeholder="0"></td>
            <td class="span1">{% if item.businessParticular.unit is not empty %}{{ item.businessParticular.unit.name }}{% endif %}</td>
            <td class="span1" id="subTotal-{{ item.id }}">{{ item.purchaseSubTotal|number_format }}</td>
            <td class="span1"><a id="{{ item.id }}"  data-url="{{ path('business_purchase_particular_delete',{'invoice': entity.id ,'id': item.id }) }}" href="javascript:" class="btn red mini delete" ><i class="icon-trash"></i></a></td>
        </tr>
    {% endfor %}
{% endif %}