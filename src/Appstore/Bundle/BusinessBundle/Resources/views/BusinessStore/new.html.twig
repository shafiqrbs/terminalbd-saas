{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                   Manage Store
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('business_store') }}">Manage Store</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green ">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Manage Store</div>
                        <div class="actions">
                            <a href="{{ path('business_store') }}" class=" btn black"><i class="icon-th-list"></i> Store</a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        <div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}

                            <div class="row-fluid" >
                                <div class="span3"></div>
                                <div class="span6">
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Store Name<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-medkit"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Mobile No <span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.mobileNo) }}
                                                    {{ form_errors(form.mobileNo) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Select DRS<span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.customer) }}
                                                    {{ form_errors(form.customer) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Area <span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.area) }}
                                                    {{ form_errors(form.area) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Marketing Executive <span class="required">*</span></label>
                                                <div class="controls">
                                                    {{ form_widget(form.marketing) }}
                                                    {{ form_errors(form.marketing) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row-fluid" >
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label"  for="category" >Address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.address) }}
                                                    {{ form_errors(form.address) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                        <!-- END FORM-->
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
