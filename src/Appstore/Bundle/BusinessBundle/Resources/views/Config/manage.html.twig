{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_warehouse HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_warehouse-title">
                    Configuration
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>

                    <li><a href="#">Configuration </a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_warehouse HEADER-->
        <!-- BEGIN inventory_warehouse CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Configuration Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <div class="clearfix"><br/></div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid box green">
                               </div>
                                <div class="row-fluid">

                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Business Model</label>
                                                    <div class="control">
                                                        {{ form_widget(form.businessModel) }}
                                                        {{ form_errors(form.businessModel) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Stock Format</label>
                                                    <div class="control">
                                                        {{ form_widget(form.stockFormat) }}
                                                        {{ form_errors(form.stockFormat) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " >Production type</label>
                                                    <div class="control">
                                                        {{ form_widget(form.productionType) }}
                                                        {{ form_errors(form.productionType) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.customInvoice) }} Custom Invoice
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.bonusFromStock) }} Bonus From Stock
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isUnitPrice) }} Is Unit Price
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isDescription) }} Is Description
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.zeroStock) }} Zero Stock Allowed
                                            </div>
                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.showStock) }} Stock Item
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.customInvoicePrint) }} Custom Invoice Print
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isStockHistory) }} Stock History
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " >Address</label>
                                                    <div class="control">
                                                        {{ form_widget(form.address) }}
                                                        {{ form_errors(form.address) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " >Print Footer Text</label>
                                                    <div class="control">
                                                        {{ form_widget(form.printFooterText) }}
                                                        {{ form_errors(form.printFooterText) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" >Invoice Comment</label>
                                                    <div class="control">
                                                        {{ form_widget(form.invoiceComment) }}
                                                        {{ form_errors(form.invoiceComment) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                {{ form_widget(form.conditionSales) }} Condition Sales
                                            </div>
                                            <div class="span6">
                                                {{ form_widget(form.tloCommission) }} TLO Commission
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                {{ form_widget(form.storeLedger) }} Store Ledger
                                            </div>
                                            <div class="span6">
                                                {{ form_widget(form.salesReturn) }} Sales Return
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                {{ form_widget(form.isMarketingExecutive) }} Marketing Executive
                                            </div>
                                            <div class="span6">
                                                {{ form_widget(form.srCommission) }} SR Commission
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="control-group">
                                                <label class="control-label" >Logo</label>
                                                <div class="controls">
                                                    <div data-provides="fileupload" class="fileupload fileupload-new">
                                                        <div  class="fileupload-new thumbnail">
                                                            {% if(entity.webPath) %}
                                                                <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webPath).resize(250,150) }}">
                                                            {% else %}
                                                                <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                            {% endif %}
                                                        </div>
                                                        <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                        <div>
                                                        <span class="btn btn-file">
                                                            <span class="fileupload-new blue btn">Select image</span>
                                                            <span class="fileupload-exists">Change</span>
                                                            {{ form_widget(form.file) }}
                                                            {{ form_errors(form.file) }}
                                                        </span>
                                                         <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                         </div>
                                             </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" ></label>
                                                    <div class="controls">
                                                        <div class="input-icon left">
                                                            Remove Image {{ form_widget(form.removeImage) }}
                                                            {{ form_errors(form.removeImage) }}
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">VAT Percent</label>
                                                    <div class="control">
                                                        {{ form_widget(form.vatPercent) }}
                                                        {{ form_errors(form.vatPercent) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">AIT Percent</label>
                                                    <div class="control">
                                                        {{ form_widget(form.aitPercent) }}
                                                        {{ form_errors(form.aitPercent) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                 </div>
                            <div class="form-actions portlet box purple">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Print</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.invoicePrintLogo) }}Print Logo
                                            </div>
                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.printOutstanding) }}Print with outstanding
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.posPrint) }} POS Print
                                            </div>
                                        </div>
                                         <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isPrintHeader) }} Print Header
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isInvoiceTitle) }} Print Invoice Title
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isPrintFooter) }} Print Footer
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.isPowered) }} Print Powered
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12"><h4>Invoice Format</h4></div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Invoice Width(cm)</label>
                                                    <div class="control">
                                                        {{ form_widget(form.invoiceWidth) }}
                                                        {{ form_errors(form.invoiceWidth) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Invoice Height(cm)</label>
                                                    <div class="control">
                                                        {{ form_widget(form.invoiceHeight) }}
                                                        {{ form_errors(form.invoiceHeight) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Body Font Size</label>
                                                    <div class="control">
                                                        {{ form_widget(form.bodyFontSize) }}
                                                        {{ form_errors(form.bodyFontSize) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12"><h4>Invoice Format</h4></div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Body Border Color</label>
                                                    <div class="control">
                                                        {{ form_widget(form.borderColor) }}
                                                        {{ form_errors(form.borderColor) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Body Border Width</label>
                                                    <div class="control">
                                                        {{ form_widget(form.borderWidth) }}
                                                        {{ form_errors(form.borderWidth) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Margin Left(cm)</label>
                                                    <div class="control">
                                                        {{ form_widget(form.printLeftMargin) }}
                                                        {{ form_errors(form.printLeftMargin) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span6">
                                                <div class="control-group">
                                                    <label class="control-label " for="vatPercentage">Margin Top(cm)</label>
                                                    <div class="control">
                                                        {{ form_widget(form.printTopMargin) }}
                                                        {{ form_errors(form.printTopMargin) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="reset" class="btn yellow"><i class="icon-refresh"></i> Reset</button>
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $('.sortable').sortable({
    handle: 'span'
    });
    $( ".sortable" ).on( "sortupdate", function( event, ui ) {
    var serialized = $(".sortable").sortable("serialize");
    $.ajax({
    url: '{{ path('dms_service_sorted',{'fieldName':'serviceSorting'}) }}',
    type: "POST",
    data: serialized
    });
    })

{% endblock %}