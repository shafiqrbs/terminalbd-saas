
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    {{ entity.vendor.companyName }} Details
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('colorsize') }}">Vendor Payment</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">{{ entity.vendor.companyName }} Details</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Vendor Payment</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    <i class="icon-cogs"></i>&nbsp;Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">

                                    <li><a href="{{ path('account_purchase_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('account_purchase') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    <li><a href="{{ path('account_purchase_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    <li><a href="{{ path('account_purchase_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>


                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form form-horizontal">

                            <div class="row-fluid">
                                <div class="span12">
                                     {% include('flash-message.html.twig')  %}
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Company Name</label>
                                        <div class="controls control-custom">{{ entity.vendor.companyName }}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Address</label>
                                        <div class="controls control-custom">{{ entity.vendor.address }}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Account Head</label>
                                        <div class="controls control-custom">{{ entity.accountHead.name }}/{{ entity.accountHead.code }}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >To increase</label>
                                        <div class="controls control-custom">{{ entity.toIncrease }}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Amount</label>
                                        <div class="controls control-custom">{{ entity.amount }}</div>
                                    </div>
                                </div>
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Bank/Account No</label>
                                        <div class="controls control-custom">{{ entity.bank.name }}/{{ entity.accountNo }}</div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
