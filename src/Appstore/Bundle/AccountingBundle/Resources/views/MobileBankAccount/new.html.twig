{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN account_bank HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="account_bank-title">
                    Mobile Bank Account
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('accountmobilebank') }}">Mobile Bank Payment</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Mobile Bank Payment new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END account_bank HEADER-->
        <!-- BEGIN account_bank CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box green tabbable">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Mobile Bank Account Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn black" href="{{ path('accountmobilebank') }}"><i class="icon-th-list"></i>&nbsp;Mobile Account</a>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}

                        <div class="row-fluid">

                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="Bank">Mobile </label>
                                            <div class="controls">
                                                {{ form_widget(form.mobile) }}
                                                {{ form_errors(form.mobile) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="Bank">Account Owner</label>
                                            <div class="controls">
                                                {{ form_widget(form.accountOwner) }}
                                                {{ form_errors(form.accountOwner) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Authorised</label>
                                            <div class="controls">
                                                {{ form_widget(form.authorised) }}
                                                {{ form_errors(form.authorised) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Service Name</label>
                                            <div class="controls">
                                                {{ form_widget(form.serviceName) }}
                                                {{ form_errors(form.serviceName) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label" for="Bank">Account No</label>
                                            <div class="controls">
                                                {{ form_widget(form.accountType) }}
                                                {{ form_errors(form.accountType) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label" for="Bank">Service Charge<span class="required">(%)</span></label>
                                            <div class="controls">
                                                {{ form_widget(form.serviceCharge) }}
                                                {{ form_errors(form.serviceCharge) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br/>

                        <!--/span-->
                        <div class="form-actions portlet box grey">
                            <div class="pull-right">
                                <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Save</button>
                                {% if(entity.id > 0 ) %}
                                    <a href="{{ path('accountmobilebank_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                {% endif %}
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
