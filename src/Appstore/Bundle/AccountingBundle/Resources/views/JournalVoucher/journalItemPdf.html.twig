        <tr>
            <td width="90">{{ entity.created|date('d-m-Y') }}</td>
            <td>{{ entity.accountRefNo }}</td>
            <td width="140">{{ entity.accountHead }}</td>
            <td>{{ entity.subAccountHead }}</td>
            <td>{{ entity.narration }}</td>
            <td>{{ entity.debit }}</td>
            <td>{{ entity.credit }}</td>
        </tr>
    {% endfor %}
