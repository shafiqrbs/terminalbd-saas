<table class="table">
    <thead>
    <tr>
        <td class="pull-center" colspan="9"><h2>{{ globalOption.name }}</h2></td>
    </tr>
    <tr>
        <th class="pull-center" colspan="9"><h3><strong>DAY CASH STATEMENT SHEET</strong></h3></th>
    </tr>
