{% extends '::print.html.twig' %}
{% block body %}
    <div style="width: 850px; margin:0 auto;">
            <table class="table" >
                <tr>
                    <td>
                        <div class="span4  pull-left invoice-logo-space">
                            {% if entity.globalOption.templateCustomize.webPath('logo') is not empty %}   <img style="max-width: 180px; max-height: 60px" src="/{{ entity.globalOption.templateCustomize.webPath('logo') }}">{% endif %}
                        </div>
                    </td>
                    <td class="pull-right">
                        <div class="span4">
                            <ul class="unstyled">
                                <li><strong>{{ entity.globalOption.name }}</strong></li>
                                <li><i class="icon-phone"></i>&nbsp;{{ entity.globalOption.mobile }}</li>
                                {% if  entity.globalOption.email is not empty %}<li><i class="icon-envelope"></i>&nbsp;{{ entity.globalOption.email }}</li>{% endif %}
                                {% if  entity.globalOption.contactPage.address1 %}<li><i class="icon-home"></i>&nbsp;{{ entity.globalOption.contactPage.address1 }}</li>{% endif %}
                                {% if entity.globalOption.domain is not empty %}<li><i class="icon-link"></i>&nbsp;www.{{ entity.globalOption.domain }}</li>{% endif %}
                            </ul>
                        </div>
                    </td>
                </tr>
            </table>
        <table class="table table-border" >
            <tr class="print-header">
                <th colspan="3">
                    <span class="barcode-left">Invoice no. {{ entity.accountRefNo }}</span>
                    <span class="title-center text-center">Payment Received</span>
                    <span class="barcode-right">Date {{ entity.updated|date('d-m-Y') }}</span>
                </th>
            </tr>
            <tr>
                <td colspan="2" class="bottom-border"><strong class="strong3">Customer Name</strong>: {{ entity.customer.name }}</td>
                <td class="bottom-border"><strong>Mobile</strong>: {{ entity.customer.mobile }}</td>
            </tr>
            <tr>
                <td colspan="3" class="bottom-border"><strong class="strong3">Address</strong>: {{ entity.customer.address|raw }}</td>
            </tr>
            <tr>
                <td colspan="3" class="bottom-border"><strong class="strong3">In words</strong>: {{ amountInWords }}</td>
            </tr>
            <tr><td colspan="3">&nbsp;</td></tr>
            <tr><td colspan="3">&nbsp;</td></tr>
            <tr><td colspan="3">&nbsp;</td></tr>
            <tr>
                <td class="span3">
                    <ul class="unstyled">
                        <li>Amount Tk. <label class="label-box">{{ entity.amount|number_format }}</label></li>
                    </ul>
                </td>
                <td class="span6 text-center">
                    {% if entity.remark is not empty  %}
                    <ul class="unstyled">
                        <li>Remark. <span class="label-box">{{ entity.remark }}</span></li>
                    </ul>
                    {% endif %}
                </td>
                <td class="span3 pull-right">
                    <ul class="unstyled">
                        <li style="border-top:2px solid #000; text-align: center">Signature</li>
                    </ul>
                </td>
            </tr>
            <tr><td colspan="3">&nbsp;</td></tr>
        </table>
        <table class="table table-border">

        </table>
    </div>
 <style>
     .strong3{
         display: inline-block;
         width: 110px;
     }
     .table td{
         font-size:13px;
     }
     .barcode-left , .barcode-right{
         line-height: 42px;
         font-size:14px;
     }
     .bottom-border{
         border-bottom: dotted 1px #000101;
     }
     .label-box{
         font-size: 13px;
         border: 1px solid #000;
         padding: 1px;
         min-width: 80px;
         display: inline-block;
         text-align: center;
         text-decoration: none;
         padding-right: 5px;
         padding-left: 5px;
     }

 </style>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@SettingToolBundle/Resources/public/css/print.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
