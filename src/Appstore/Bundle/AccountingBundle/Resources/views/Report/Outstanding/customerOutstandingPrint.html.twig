<html>
<head>
    <title>{{ customer.name }}</title>
    <style>
        table.posPrint{
            width: 100%!important;
            font-family: sans-serif, Arial, Verdana, "Trebuchet MS";
            collapse: 0;
            border-collapse: collapse;
            font-size: 12px;
        }
        table.posPrint tr.head-blue{
            width: 100% !important;
            background: #d9dde1;
            height: 34px;
            border-top: 2px solid #0A0302;
            border-bottom: 2px solid #0A0302;
        }
        table.posPrint tr.head-blue th table.inner-table{
            font-size: 12px;
            width: 100%;
        }
        table.posPrint tr.body-blue td table.inner-table{
            font-size: 12px;
            width: 100%;
        }
        table.posPrint tr.tfooter{
            width: 100% !important;
            background: #d9dde1;
            border-top: 2px solid #0A0302;
            border-bottom: 2px solid #0A0302;
            height: 34px;
        }
        table.posPrint tr.body-blue:nth-child(even){
            width: 100% !important;
            background: #e7e7e7;
            border-bottom: 1px solid #0A0302;
        }
        table.posPrint tr.body-blue:nth-child(odd){
            width: 100% !important;
            border-bottom: 1px solid #0A0302;
        }
        table.posPrint tr td , table.posPrint tr th{
            text-align: left;
        }
        table.posPrint tr.row-border td , table.posPrint tr.row-border th{
            text-align: left;
            border: 1px solid#f4f5f7;
        }
        table.posPrint tr:first-child td , table.posPrint tr:first-child th{
            font-weight: normal;
        }
        table.posPrint tr td.left , table.posPrint tr th.left{
            text-align: left;
            padding-left: 4px;
        }
        table.posPrint tr td.right  , table.posPrint tr th.right{
            text-align: right;
            padding-right: 4px;
        }
        table.posPrint tr td.border-top{
            border-top: 2px #dcdfe5 solid;
        }
        table label{
            width: 72px;
            display: inline-block;
            text-decoration: none;
            font-size: 11px!important;
        }
        table.posPrint h3{
            font-size: 18px;
            padding: 0;
            margin: 0;
        }
        [class*="span"]{
            flex: 0 0 auto;
        }
        .row {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
            display: flex;
            flex-wrap: wrap;
            margin-top: calc(var(--bs-gutter-y) * -1);
        }
        .span12{
            width: 100%!important;
        }
        .span9{
            width: 74.35897435897436%!important;
        }
        .span8{
            width: 65.81196581196582%!important;
        }
        .span6{
            width: 48.717948717948715%!important;
        }
        .span5{
            width: 41.666667%!important;
        }
        .span4{
            width: 31.623931623931625%!important;
        }
        .span3{
            width: 23.076923076923077%!important;
        }

        .span2{
            width: 14.52991452991453%!important;
        }
        .span1{
            width: 5.982905982905983%!important;
        }
        .center{
            text-align: center;
        }
        .left{
            text-align: left;
        }
        .right{
            text-align: right;
        }
    </style>
    <script type="text/javascript">
        setTimeout(function () {
            window.open('', '_self', '');
            window.close();
        }, 2000);
    </script>
</head>
<body style="width: 100%; margin: 0 auto;">
<table class="posPrint">
    {% if  globalOption.webPath is defined and globalOption.webPath('logo') is not empty  %}
        <tr>
            <td colspan="9" class="span12 center logo">
                <div class="row">
                    <div class="span12 center">
                        <img style="max-width: 380px; max-height: 120px" src="/{{ globalOption.webPath() }}">
                    </div>
                </div>
            </td>
        </tr>
    {% endif %}
    <tr>
        <td colspan="9" class="center label">
            <div class="row">
                <div class="span12 center">
                    <h3>{{ globalOption.name }}</h3>
                    <br/>
                    {{ globalOption.address|raw }}
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="9" class="label">
            <div class="row">
                <span class="span2 right">Customer Name</span><span class="center span1">:</span><span class="span3 left"><strong>{{ customer.name }}</strong></span>
                <span class="span2 right">Mobile</span><span class="center span1">:</span><span class="3 left"><strong>{{ customer.mobile }}</strong></span>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="9" class="label"><div class="row"><span class="span2 right">Address</span><span class="span1 center">:</span><span class="span6 left">{{ customer.address }}</span></div></td>
    </tr>
    <tr>
        <td colspan="9" class="label">
            <div class="row">
                <span class="span2 right">Printed By</span>
                <span class="span1 center">:</span>
                <span class="span3 left">{% if app.user.profile %}{{ app.user.profile.name }}{% endif %}</span>
                <span class="span2 right">Date & Time</span>
                <span class="span1 center">:</span>
                <span class="span3 left">{{ "now"|date('d-m-Y h:i A') }}</span>
            </div>
        </td>
    </tr>
    <tr><td colspan="9"><br/></td></tr>
    <tr class="head-blue">
        <th >S/N</th>
        <th>Created</th>
        <th >Invoice</th>
        <th>
            {% if globalOption.mainApp.slug == 'business' %}
                <table class="inner-table">
                    <tr>
                        <th width="40%" class="left"><strong>Particular</strong></th>
                        <th width="20%" class="left"><strong>Size</strong></th>
                        <th width="10%" class="center"><strong>Qnt</strong></th>
                        <th width="10%" class="center"><strong>Unit</strong></th>
                        <th width="10%" class="right"><strong>Price</strong></th>
                        <th width="10%" class="right"><strong>Total</strong></th>
                    </tr>
                </table>
            {% else %}
                Particulars
            {% endif %}
        </th>
        <th >Method</th>
        <th class="right">Total</th>
        <th class="right">Received</th>
        <th class="right">Due</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr class="body-blue" id="remove-{{ entity.id }}">
            <td >{{ loop.index }}.</td>
            <td >{{ entity.updated|date('d-m-Y') }}</td>
            <td >
                {{ entity.sourceInvoice }}
            </td>
            <td style="padding: 0!important; border: none!important;">
                {% if entity.businessInvoice is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'business' %}
                    <table class="inner-table">
                        {% for item in entity.businessInvoice.businessInvoiceParticulars  %}
                            <tr>
                                <td  width="40%" class="left" >{{ loop.index }}. {{ item.particular }}</td>
                                <td  width="20%" class="left">
                                    {% if entity.businessInvoice.businessConfig.businessModel == 'sign' %}
                                    {% if item.height is not empty and item.width is not empty %}
                                        {{ item.height }} x {{ item.width }} = {{ item.subQuantity }}
                                    {% endif %}
                                    {% endif %}
                                </td>
                                <td width="10%" class="center">{{ item.quantity }}</td>
                                <td width="10%" class="center">{{ item.unit }}</td>
                                <td width="10%" class="right">{{ item.price }}</td>
                                <td width="10%" class="right">{{ item.subTotal|number_format }}</td></tr>
                        {% endfor %}
                    </table>
                {% elseif entity.sales is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'inventory' %}
                    {% for item in entity.sales.salesItems  %}
                        <p>{{ loop.index }}. {{ item.item.name }}</p>
                    {% endfor %}
                {% elseif entity.hmsInvoices is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'hms' %}
                    {% for item in entity.hmsInvoices.invoiceParticulars  %}
                        <p>{{ loop.index }}. {{ item.particular.name }}</p>
                    {% endfor %}
                {% elseif entity.dmsInvoices is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'dms' %}
                    {% for item in entity.dmsInvoices.invoiceParticulars  %}
                        <p>{{ loop.index }}. {{ item.particular.name }}</p>
                    {% endfor %}
                {% elseif entity.restaurantInvoice is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'restaurant' %}
                    {% for item in entity.restaurantInvoice.invoiceParticulars  %}
                        <p>{{ loop.index }}. {{ item.particular.name }}</p>
                    {% endfor %}
                {% elseif entity.medicineSales is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'miss' %}
                    {% for item in entity.medicineSales.medicineSalesItems  %}
                        <p>{{ loop.index }}. {{ item.medicineStock.name }} ({{ item.quantity }}x{{ item.salesPrice }} = {{  item.subTotal }} Tk) </p>
                    {% endfor %}
                {% elseif entity.hotelInvoice is not empty and customer is not empty and customer.globalOption.mainApp.slug == 'hotel' %}
                    {% for item in entity.hotelInvoice.hotelInvoiceParticulars  %}
                        <p>{{ loop.index }}. {{ item.hotelParticular.name }}</p>
                    {% endfor %}
                {% endif %}
            </td>
            <td >
                {% if entity.transactionMethod is defined and entity.transactionMethod is not empty %}{{ entity.transactionMethod.name }}{% endif %}
            </td>
            <td class="right">{{ entity.totalAmount|number_format }}</td>
            <td class="right">
                {{ entity.amount|number_format }}
            </td>
            <td class="right">{{ entity.balance|number_format }}</td>
        </tr>
    {% endfor %}
    {% if searchForm['mobile'] is defined and searchForm['mobile'] is not empty  %}
    <tr class="tfooter">
        <td class="right" colspan="5" ><strong>Grand Total</strong></td>
        <td class="right" ><strong>{{ overview.totalAmount|number_format }}</strong></td>
        <td class="right" ><strong>{{ overview.receiveAmount|number_format }}</strong></td>
        <td class="right" ><strong>{{ (overview.totalAmount - overview.receiveAmount)|number_format }}</strong></td>
    </tr>
    {% endif %}
    </tbody>

</table>
</body>
</html>