{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN account_expenditure HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="account_expenditure-title">
                    Expenditure Payment
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('dps_account_expenditure') }}">Expenditure Payment</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Expenditure Payment new/edit</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END account_expenditure HEADER-->
        <!-- BEGIN account_expenditure CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Expenditure Payment Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn red" href="{{ path('dps_account_expenditure_new') }}"><i class="icon-plus-sign"></i> New Expense</a>
                                <a class="btn" href="{{ path('dps_account_expenditure') }}"><i class="icon-th-list"></i>&nbsp;Lists</a>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Expenditure">To user</label>
                                                <div class="controls">
                                                    {{ form_widget(form.toUser) }}
                                                    {{ form_errors(form.toUser) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">

                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Transaction Method</label>
                                                <div class="controls">
                                                    {{ form_widget(form.transactionMethod) }}
                                                    {{ form_errors(form.transactionMethod) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid bankHide">
                                        <div class="span12">
                                            <div class="control-group ">
                                                <label class="control-label" for="accountBank">
                                                    {{ form_widget(form.accountBank) }}
                                                    {{ form_errors(form.accountBank) }}
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid bkashHide">
                                        <div class="span12">
                                            <div class="control-group ">
                                                <label class="control-label" for="accountBkash">
                                                    {{ form_widget(form.accountMobileBank) }}
                                                    {{ form_errors(form.accountMobileBank) }}
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Expense Category</label>
                                                <div class="controls">
                                                    {{ form_widget(form.expenseCategory) }}
                                                    {{ form_errors(form.expenseCategory) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Amount </label>
                                                <div class="controls">
                                                    {{ form_widget(form.amount) }}
                                                    {{ form_errors(form.amount) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="remark">
                                            {{ form_widget(form.remark) }}
                                            {{ form_errors(form.remark) }}
                                        </label>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i>&nbsp;Payment</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('account_expenditure_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block cssBlock %}
    {% stylesheets filter='cssrewrite'
    '@AccountingBundle/Resources/public/css/style.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock  %}
{% block javascriptBlock %}
    {{ parent() }}
    {% javascripts
    '@AccountingBundle/Resources/public/js/common.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block documentready %}
    {{ parent() }}
    CommonJs();
{% endblock %}