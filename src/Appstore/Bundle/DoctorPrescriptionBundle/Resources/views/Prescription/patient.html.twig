<!-- BEGIN FORM-->
<div class="portlet box green">
    <div class="clearfix">&nbsp;</div>
    <div class="portlet-body" style="height: 460px">
    {{ form_start(form) }}
    {{ form_row(form._token) }}
        <div class="row-fluid">
            <div class="span4">
                <div class="control-group">
                    <label class="control-label" for="price">Assign Doctor</label>
                    <div class="controls">
                        <select id="assignDoctor" name="assignDoctor" class="m-wrap span12">
                            {% for assign in assignDoctors %}
                                <option id="{{ assign.id }}">{{ assign.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="control-group">
                    <label class="control-label red" for="firstName"><span>Patient Name</span><span class="required">*</span></label>
                    <div class="controls">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
            </div>
            <div class="span4">
                <div class="row-fluid">
                    <div class="span12">
                        <label class="control-label red" for="firstName"><span>Mobile no</span><span class="required">*</span></label>
                        <div class="controls">
                            {{ form_widget(form.mobile) }}
                            {{ form_errors(form.mobile) }}
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label" for="price">Gender & Age Group<span class="required">*</span></label>
                    <div class="controls">
                        <div class="span4">
                            {{ form_widget(form.gender) }}
                        </div>
                        <div class="span4">
                            {{ form_widget(form.age) }}
                        </div>
                        <div class="span4">
                            {{ form_widget(form.ageType) }}
                        </div>

                    </div>
                </div>
                </div>
                <div class="row-fluid">
                <div class="control-group">
                    <label class="control-label" for="price">Age & Weight<span class="required">*</span></label>
                    <div class="controls">
                        <div class="span4">
                            {{ form_widget(form.ageGroup) }}
                        </div>
                        <div class="span4">
                            {{ form_widget(form.bloodPressure) }}
                        </div>
                        <div class="span4">
                            {{ form_widget(form.weight) }}
                        </div>
                    </div>
                </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label red" for="firstName"><span>Location</span></label>
                            <div class="controls">
                                {{ form_widget(form.location) }}
                                {{ form_errors(form.location) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="control-group">
                            <label class="control-label red" for="firstName"><span>Address</span></label>
                            <div class="controls">
                                {{ form_widget(form.address) }}
                                {{ form_errors(form.address) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <button type="submit"  class="btn red span12" id="saveNewPatientButton"><i class="icon-save"></i> Save & Continue</button>
                    </div>
                </div>
                <div class="clearfix">&nbsp;</div>
            </div>
        </div>
    {{ form_end(form) }}
    </div>
    <div class="clearfix">&nbsp;</div>
</div>
<style>
    .row-fluid label{
        font-weight: bold;

    }
    input[class*="span"].m-wrap , .row-fluid select[class*="span"]{
        border: 2px solid #0b84fe!important;
    }
</style>

<!-- END FORM-->
