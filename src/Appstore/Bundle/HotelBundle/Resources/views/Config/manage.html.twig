{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN inventory_warehouse HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="inventory_warehouse-title">
                    Configuration
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>

                    <li><a href="#">Configuration </a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END inventory_warehouse HEADER-->
        <!-- BEGIN inventory_warehouse CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Configuration Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <div class="clearfix"><br/></div>
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid box green">
                               </div>
                                <div class="row-fluid">

                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.invoiceForRestaurant) }} Invoice for Restaurant
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " >Invoice Font Size</label>
                                                    <div class="control">
                                                        {{ form_widget(form.invoiceFontSize) }}
                                                        {{ form_errors(form.invoiceFontSize) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                {{ form_widget(form.customInvoicePrint) }} Custom Invoice Print
                                            </div>
                                        </div>

                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label " >Address</label>
                                                    <div class="control">
                                                        {{ form_widget(form.address) }}
                                                        {{ form_errors(form.address) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span4">
                                        <div class="row-fluid">
                                            <div class="control-group">
                                                <label class="control-label" >Logo</label>
                                                <div class="controls">
                                                    <div data-provides="fileupload" class="fileupload fileupload-new">
                                                        <div  class="fileupload-new thumbnail">
                                                            {% if(entity.webPath) %}
                                                                <img class="fileupload-preview fileupload-exists" alt="" src="{{ image(entity.webPath).resize(250,150) }}">
                                                            {% else %}
                                                                <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                            {% endif %}
                                                        </div>
                                                        <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                        <div>
                                                        <span class="btn btn-file">
                                                            <span class="fileupload-new blue btn">Select image</span>
                                                            <span class="fileupload-exists">Change</span>
                                                            {{ form_widget(form.file) }}
                                                            {{ form_errors(form.file) }}
                                                        </span>
                                                         <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                         </div>
                                             </div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span12">
                                                <div class="control-group">
                                                    <label class="control-label" ></label>
                                                    <div class="controls">
                                                        <div class="input-icon left">
                                                            Remove Image {{ form_widget(form.removeImage) }}
                                                            {{ form_errors(form.removeImage) }}
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                 </div>
                                <div class="form-actions portlet box green">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>SMS Notification & Text Setup</div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label " for="vatPercentage">SMS Notification {{ form_widget(form.notification) }}</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label " for="">Booking Text</label>
                                            <div class="control">
                                                {{ form_widget(form.invoiceBookingsms) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label " for="">Check-in Text</label>
                                            <div class="control">
                                                {{ form_widget(form.invoiceCheckinsms) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label " for="">Check-out Text</label>
                                            <div class="control">
                                                {{ form_widget(form.invoiceCheckoutsms) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix">&nbsp;</div>

                                <div class="form-actions portlet box yellow">
                                    <div class="portlet-title">
                                        <div class="caption"><i class="icon-reorder"></i>Manage VAT</div>
                                    </div>
                                </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                    <div class="span2">
                                        <label class="control-label " for="vatPercentage">&nbsp;</label>
                                        {{ form_widget(form.vatEnable) }} Vat Enable
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <label class="control-label " for="vatPercentage">Vat Registration no</label>
                                            <div class="control">
                                                {{ form_widget(form.vatRegNo) }}
                                                {{ form_errors(form.vatRegNo) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <label class="control-label " for="vatPercentage">Service Charge</label>
                                            <div class="control">
                                                {{ form_widget(form.serviceCharge) }}%
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <label class="control-label " for="vatPercentage">Vat for Hotel</label>
                                            <div class="control">
                                                {{ form_widget(form.vatForHotel) }}%
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span2">
                                        <div class="control-group">
                                            <label class="control-label " for="vatPercentage">Vat for Restaurant</label>
                                            <div class="control">
                                                {{ form_widget(form.vatForRestaurant) }}%
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <div class="clearfix">&nbsp;</div>
                            <div class="form-actions portlet box blue">
                                    <div class="portlet-title"><div class="caption"><i class="icon-reorder"></i>Manage Print</div></div>
                                </div>
                            <div class="clearfix">&nbsp;</div>
                            <div class="row-fluid">
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12">&nbsp;</div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.invoicePrintLogo) }}Print Logo
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.isPrintHeader) }} Print Header
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.isInvoiceTitle) }} Print Invoice Title
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.isPrintFooter) }} Print Footer
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            {{ form_widget(form.isPowered) }} Print Powered
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12"><h4>Invoice Format</h4></div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label " for="vatPercentage">Invoice Height</label>
                                                <div class="control">
                                                    {{ form_widget(form.invoiceHeight) }}
                                                    {{ form_errors(form.invoiceHeight) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label " for="vatPercentage">Body Font Size</label>
                                                <div class="control">
                                                    {{ form_widget(form.bodyFontSize) }}
                                                    {{ form_errors(form.bodyFontSize) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="span4">
                                    <div class="row-fluid">
                                        <div class="span12"><h4>Invoice Format</h4></div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label " for="vatPercentage">Margin Left</label>
                                                <div class="control">
                                                    {{ form_widget(form.printLeftMargin) }}
                                                    {{ form_errors(form.printLeftMargin) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label " for="vatPercentage">Margin Top</label>
                                                <div class="control">
                                                    {{ form_widget(form.printTopMargin) }}
                                                    {{ form_errors(form.printTopMargin) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="clearfix">&nbsp;</div>
                            <!--/span-->
                            <div class="form-actions portlet box grey">
                                <div class="pull-right">
                                    <button type="submit" class="btn green"><i class="icon-save"></i> Save</button>
                                </div>
                            </div>

                            </div>

                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
{% block documentready %}
    {{ parent() }}
    $('.sortable').sortable({
    handle: 'span'
    });
    $( ".sortable" ).on( "sortupdate", function( event, ui ) {
    var serialized = $(".sortable").sortable("serialize");
    $.ajax({
    url: '{{ path('dms_service_sorted',{'fieldName':'serviceSorting'}) }}',
    type: "POST",
    data: serialized
    });
    })

{% endblock %}