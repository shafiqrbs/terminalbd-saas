{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form '::partials/form.elements.html.twig' %}

<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
            Groups
            <small></small>
        </h3>
        <ul class="page-breadcrumb breadcrumb" style="height: 36px;">
            <li>
                <i class="fa fa-home"></i>
                <a href="/" style="color: #333 !important;">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <i class="fa fa-user"></i>
                <a href="/users/group" style="color: #333 !important;">Groups</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li><a href="#" style="color: #333 !important;">From</a></li>
            <li class="pull-right">
                <div id="" class="" data-placement="" style="font-family: 'Open Sans', sans-serif; color: #f5f5f5; padding-top: 8px;text-align: center;margin-top: -8px;width: 124%;background: #e02222;height: 36px;">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </div>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->

<div class="modal-dialog bodyWidth">
    <div class="modal-content backgroundWhite">
        <div class="modal-header backGroundLightGrey">
            <h4 class="modal-title bold text-center"> Group Add Form</h4>
        </div>

        <form action="{{ path('fos_user_group_new') }}" {{ form_enctype(form) }} method="POST" class="fos_user_group_new">

        <div class="alert alert-error {% if not form.vars.errors|length %} hide {% endif %}">
            <button class="close" data-dismiss="alert"></button>
            You have some form errors. Please check below.
            {{ form_errors(form) }}
        </div>

        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">

                    <div class="form-group">
                        <label class="col-md-3 control-label"> Name</label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <span class="input-group-btn"></span>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control span6 m-wrap', 'data-required': '1' }}) }}
                            </div>
                        </div>
                    </div>
<br/>
<br/>
<br/>
<br/>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Description</label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <span class="input-group-btn"></span>
                                {{ form_widget(form.description, {'attr': { 'class': 'form-control span6 m-wrap', 'rows': '3' }}) }}
                            </div>
                        </div>
                    </div>
<br/>
<br/>
<br/>
<br/>
<br/>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Roles</label>
                        <div class="col-md-8">
                                    {{ form_widget(form.roles, {'attr': { 'class': '', 'style': 'height:200px; ' } } ) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
            {{ form_widget(form) }}
        <div class="modal-footer" style="background: lightgrey;">
            <div class="btn-group">
                <a href="/users/group/list" class="btn" style="width: 100px;background: #0353D6; color: white !important;">
                    <i class="fa fa-ban"> Cancel</i>
                </a>
            </div>
            <div class="btn-group">
                <div class="btn-group">
                    <button type="submit" value="{{ 'group.new.submit'|trans }}" class="btn" style="width: 120px;background: #0353D6; color: white !important;">Create Group</button>
                </div>
            </div>
        </div>

        </form>

    </div>
</div>


