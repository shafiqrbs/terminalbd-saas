{% extends '::base.html.twig' %}

{% block body %}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Manage home slider

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div>

            <ul class="siteslider-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('siteslider') }}" >Manage home slider</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    Create
                </li>

                <li class="pull-right custom-pull-right" >
                    <a class="btn green-stripe purple" href="{{ path('siteslider_new') }}"><i class="icon-plus"></i> New Create</a>
                    <a class="btn purple-stripe blue" href="{{ path('siteslider') }}">Listing<i class="icon-headphones"></i></a>

                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">
            <div class="modal-dialog modal-dialog-form" >
                <div class="modal-content" >

                    <div class="modal-body ">
                        <div class="portlet box">
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required">Name:</label>
                                <div class="col-md-9 form-group-error">
                                    <div class="input-icon">
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required">Title:</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        {{ form_widget(form.title) }}
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required"></label>
                                <div class="col-md-9">
                                    <div class="col-md-4">
                                        <label for="item_itemName"  class="control-label">Title animation</label>
                                        {{ form_widget(form.titleAnimation) }}
                                        {{ form_errors(form.titleAnimation) }}
                                    </div>
                                    <div class="col-md-3">
                                        <label for="item_itemName"  class="control-label">Position x</label>

                                        {{ form_widget(form.titlePositionX) }}
                                        {{ form_errors(form.titlePositionX) }}
                                    </div>
                                    <div class="col-md-3">
                                        <label for="item_itemName"  class="control-label">Position y</label>
                                        {{ form_widget(form.titlePositionY) }}
                                        {{ form_errors(form.titlePositionY) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required">Short Text:</label>
                                <div class="col-md-9">
                                    <div class="input-icon">
                                        {{ form_widget(form.shortText) }}
                                        {{ form_errors(form.shortText) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required"></label>
                                <div class="col-md-9">
                                    <div class="col-md-4">
                                        <label for="item_itemName"  class="control-label">Text animation</label>
                                        {{ form_widget(form.textAnimation) }}
                                        {{ form_errors(form.textAnimation) }}
                                    </div>
                                    <div class="col-md-3">
                                        <label for="item_itemName"  class="control-label">Position x</label>

                                        {{ form_widget(form.shortTextX) }}
                                        {{ form_errors(form.shortTextX) }}
                                    </div>
                                    <div class="col-md-3">
                                        <label for="item_itemName"  class="control-label">Position y</label>
                                        {{ form_widget(form.shortTextY) }}
                                        {{ form_errors(form.shortTextY) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required">Feature Image:</label>
                                <div class="col-md-9 form-group-error">
                                    <div class="input-icon">
                                        <div data-provides="fileupload" class="fileupload fileupload-new">
                                            <div style="width: 200px; height: 150px;" class="fileupload-new thumbnail">
                                                {% if(entity.webPath) %}
                                                    <img alt="" src="/{{ entity.webPath }}">
                                                {% else %}
                                                    <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                {% endif %}
                                            </div>
                                            <div style="max-width: 200px; max-height: 150px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
                                            <div>
													<span class="btn btn-file"><span class="fileupload-new">Select image</span>
													<span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}</span>
                                                <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="item_itemName"  class="control-label col-md-2 required">Status:</label>
                                <div class="col-md-9">
                                    <label class="checkbox line">
                                        {{ form_widget(form.status) }}
                                    </label>
                                </div>
                            </div>
                            <div class="form-actions">
                                <label for="item_itemName"  class="control-label col-md-2 required"></label>
                                <div class="col-md-9">
                                    {{ form_widget(form.submit) }}{{ form_widget(form.reset) }}
                                </div>
                            </div>
                            {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
