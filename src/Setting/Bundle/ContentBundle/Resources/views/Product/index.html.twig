{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Product View Lists
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('product') }}">Product</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Lists</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Product Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <div class="btn-group">
                                    <a class="btn red" href="{{ path('product_new') }}"><i class="icon-plus-sign"></i>&nbsp;Add Product</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body flip-scroll">
                            {% include('flash-message.html.twig')  %}
                            <table class="table table-bordered table-striped table-condensed flip-content ">

                                <thead class="flip-content ">
                                <tr class="head-grey">
                                    <th class="numeric" >Name </th>
                                    <th class="numeric" >Sku Code </th>
                                    <th class="numeric" >Price </th>
                                    <th class="numeric" >Category</th>
                                    <th class="numeric" >Action</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for entity in entities %}

                                    <tr>
                                        <td class="numeric" ><a href="{{ path('product_edit',{'id': entity.id })}}">{{ entity.name }}</a></td>
                                        <td class="numeric">{{ entity.skuCode }}</td>
                                        <td class="numeric">{% if entity.pricePrefix is not empty %}{{ entity.pricePrefix.currency }}. {% endif %} {{ entity.price }}</td>
                                        <td class="numeric">
                                            {% if(entity.moduleCategory is defined and entity.moduleCategory is not empty ) %}
                                                <ul>
                                                {% for cat in entity.moduleCategory  %}
                                                   <li>{{ cat.name }}</li>
                                            {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </td>

                                        <td class="numeric" >
                                            {% if( entity.status == 1) %}
                                                <a class="btn mini green-stripe btn-action" href="{{ path('product_status', { 'id': entity.id}) }}"><span class="badge badge-success">x</span></a>
                                            {% else %}
                                                <a class="btn mini green-stripe btn-action" href="{{ path('product_status', { 'id': entity.id}) }}"><span class="badge badge-important">a</span>    </a>
                                            {% endif %}
                                            <a class="btn mini green-stripe btn-action" href="{{ path('product_edit', { 'id': entity.id }) }}">Edit</a>
                                            <a class="btn mini red-stripe btn-action confirm" title="Are you sure went to delete ?" href="{{ path('product_delete', { 'id': entity.id }) }}" >Delete</a>
                                            <a class="btn mini red-stripe btn-action confirm" title="Are you sure went to delete ?" href="{{ path('product_copy', { 'id': entity.id }) }}" >Copy Product</a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
