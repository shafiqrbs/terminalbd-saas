{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN admission HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="admission-title">
                    Form Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('admission') }}">Admission</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Form Components</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END admission HEADER-->
        <!-- BEGIN admission CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="btn-group pull-right">
                    {% if entity.id > 0  %}
                        <a class="btn black" target="_blank" href="{{ path('admission_print',{'id': entity.id}) }}">Print</a>
                        <a class="btn yellow" target="_blank" href="{{ path('admission_pdf',{'id': entity.id}) }}">PDF</a>
                        <a class="btn blue" target="_blank" href="{{ path('admission_export',{'id': entity.id}) }}">Export</a>
                    {% else %}
                        <a class="btn purple" href="{{ path('admission_import') }}">Import</a>
                    {% endif %}
                </div>
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                    </div>

                    <div class="portlet-body">

                        <div class="tabbable portlet-tabs">
                            <ul class="nav nav-tabs">
                                {% if entity.id > 0  %}
                                    <li><a  href="{{ path('admission_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;View</a></li>
                                {% endif %}
                                <li class=""><a  href="{{ path('admission') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                <li class="active"><a  href="javascript:"><i class="icon-edit"></i>&nbsp;Add/Edit</a></li>


                            </ul>
                            <div class="tab-content">

                                <div class="portlet-body form">
                                    {% include('flash-message.html.twig')  %}
                                    <!-- BEGIN FORM-->
                                    {{ form_start(form) }}
                                    {{ form_row(form._token) }}

                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Title <span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-font"></i>
                                                        {{ form_widget(form.name) }}
                                                        {{ form_errors(form.name) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!--/row-->
                                                <div class="form-actions portlet box green">
                                        <div class="portlet-title">
                                            <div class="caption"><i class="icon-reorder"></i>Course Information</div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Course <span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">

                                                        {{ form_widget(form.course) }}
                                                        {{ form_errors(form.course) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Course Level</label>
                                                <div class="controls">
                                                        {{ form_widget(form.courseLevel) }}
                                                        {{ form_errors(form.courseLevel) }}
                                                </div>
                                                </div>
                                            </div>
                                    </div>
                                    <!--/span-->
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Fees</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                         <div class="input-append">
                                                         <span class="add-on">BDT</span>
                                                            {{ form_widget(form.tuitionFee) }}
                                                            {{ form_errors(form.tuitionFee) }}
                                                            <span class="add-on">00</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Qualification</label>
                                                <div class="controls">
                                                        <div class="input-icon left">
                                                            <i class="icon-font"></i>
                                                            {{ form_widget(form.qualification) }}
                                                            {{ form_errors(form.coursePeriod) }}
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Course Duration</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                     <i class="icon-font"></i>
                                                        {{ form_widget(form.coursePeriod) }}
                                                        {{ form_errors(form.classDuration) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Class Time</label>
                                                    <div class="controls">
                                                        <div class="input-icon left">
                                                            <i class="icon-font"></i>
                                                            {{ form_widget(form.classDuration) }}
                                                            {{ form_errors(form.classDuration) }}
                                                        </div>
                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="row-fluid">
                                        {% if form.branches is defined %}
                                        <div class="span6">
                                            <div class="control-group">
                                                    <label class="control-label" for="firstName">Branch</label>
                                                <div class="controls">
                                                     {{ form_widget(form.branches) }}
                                                     {{ form_errors(form.branches) }}
                                                 </div>
                                            </div>
                                        </div>
                                        {% endif %}
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Online Registration{{ form_widget(form.isOnlineRegistration) }}</label>
                                                <label class="control-label" for="firstName">Online Payment{{ form_widget(form.isPayment) }}</label>
                                                <label class="control-label" >Day Shifting</label>
                                                <div class="controls">
                                                        {{ form_widget(form.shifting) }}
                                                        {{ form_errors(form.shifting) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <!--/span-->
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Contact Person</label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-user"></i>
                                                        {{ form_widget(form.contactPerson) }}
                                                        {{ form_errors(form.contactPerson) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6 ">

                                            <div class="control-group">
                                                <label class="control-label" >Mobile no</label>
                                                <div class="controls">
                                                    <div class="input-prepend"><span class="add-on">+88</span>
                                                        {{ form_widget(form.mobile) }}
                                                        {{ form_errors(form.mobile) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Email <span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-envelope"></i>
                                                        {{ form_widget(form.email) }}
                                                        {{ form_errors(form.email) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" >Phone no</label>
                                                <div class="controls">
                                                    <div class="input-prepend"><span class="add-on">+88 2</span>
                                                        {{ form_widget(form.phone) }}
                                                        {{ form_errors(form.phone) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>

                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Address <span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="input-icon left">
                                                        <i class="icon-map-marker"></i>
                                                        {{ form_widget(form.address) }}
                                                        {{ form_errors(form.address) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!--/row-->
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Start/End date<span class="required">*</span></label>
                                                <div class="controls">
                                                    <div class="bootstrap-timepicker-component  span6">
                                                        {{ form_widget(form.startDate) }}
                                                        {{ form_errors(form.startDate) }}
                                                    </div>
                                                    <div class="bootstrap-timepicker-component  span6">
                                                        {{ form_widget(form.endDate) }}
                                                        {{ form_errors(form.endDate) }}

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Open/Close Time</label>
                                                <div class="controls">
                                                    <div class="input-append bootstrap-timepicker-component  span5">
                                                        {{ form_widget(form.startHour) }}
                                                        {{ form_errors(form.startHour) }}
                                                        <span class="add-on"><i class="icon-time"></i></span>
                                                    </div>
                                                    <span class="span1 span-line-height">to</span>
                                                    <div class="input-append bootstrap-timepicker-component  span5">
                                                        {{ form_widget(form.endHour) }}
                                                        {{ form_errors(form.endHour) }}
                                                        <span class="add-on"><i class="icon-time"></i></span>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!--/row-->


                                    <div class="form-actions portlet box grey">
                                        <div class="portlet-title">
                                            <div class="caption"><i class="icon-reorder"></i>Content</div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <div class="controls">
                                                    {{ form_widget(form.content) }}
                                                    {{ form_errors(form.content) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Attach File</label>
                                                <div class="controls">

                                                    <div data-provides="fileupload" class="fileupload fileupload-new">
                                                        <div class="input-append">
                                                            <div class="uneditable-input">
                                                                <i class="icon-file fileupload-exists"></i>
                                                                <span class="fileupload-preview"></span>
                                                            </div>
													<span class="btn btn-file">
													<span class="fileupload-new">Select file</span>
													<span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
													</span>
                                                            <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->
                                        <div class="span6 ">

                                            <div class="control-group">
                                                <label class="control-label" >Status</label>
                                                <div class="controls">
                                                    <div class="input-icon left">

                                                        {{ form_widget(form.status) }}
                                                        {{ form_errors(form.status) }}
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                        <!--/span-->


                                    </div>
                                    <div class="form-actions portlet box grey">
                                        <div class="pull-center">
                                            <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                            <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                            {% if(entity.id > 0 ) %}
                                                <a href="{{ path('admission_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {{ form_end(form) }}
                                    <!-- END FORM-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
