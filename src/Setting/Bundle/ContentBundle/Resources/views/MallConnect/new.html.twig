{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN mallconnect HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="mallconnect-title">
                    Mall Connect Components
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('mallconnect') }}">Mall Connect</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">Mall Connect Components</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END mallconnect HEADER-->
        <!-- BEGIN mallconnect CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools
                                    <i class="icon-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li class="divider"></li>
                                    <li><a href="{{ path('mallconnect_new') }}"><i class="icon-plus"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('mallconnect') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    {% if(entity.id > 0 ) %}
                                        <li><a href="{{ path('mallconnect_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                        <li><a href="{{ path('mallconnect_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    {% endif %}
                                    <li class="divider"></li>

                                </ul>
                            </div>
                        </div>

                    </div>

                    <div class="portlet-body">

                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <div class="row-fluid">
                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Shop no</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.shopNo) }}
                                                {{ form_errors(form.shopNo) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Shopping Mall<span class="required">*</span></label>
                                        <div class="controls">
                                                {{ form_widget(form.mall) }}
                                                {{ form_errors(form.mall) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Shop name</label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-font"></i>
                                                {{ form_widget(form.name) }}
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">

                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Level<span class="required">*</span></label>
                                        <div class="controls">
                                            {{ form_widget(form.level) }}
                                            {{ form_errors(form.level) }}
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Block No</label>
                                        <div class="controls">
                                            {{ form_widget(form.block) }}
                                            {{ form_errors(form.block) }}
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Contact Person<span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-user"></i>
                                                {{ form_widget(form.contact) }}
                                                {{ form_errors(form.contact) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Mobile<span class="required">*</span></label>
                                        <div class="controls">
                                            <div class="input-icon left">
                                                <i class="icon-mobile-phone"></i>
                                                {{ form_widget(form.mobile) }}
                                                {{ form_errors(form.mobile) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6 ">
                                    <div class="control-group">
                                        <label class="control-label" >Logo</label>
                                         <div class="controls">
                                            <div data-provides="fileupload" class="fileupload fileupload-new">
                                                <div  class="fileupload-new thumbnail">
                                                    {% if(entity.webPath) %}
                                                        <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="{{ image(entity.webPath).resize(100,100) }}">
                                                    {% else %}
                                                        <img alt="" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                                                    {% endif %}
                                                </div>
                                                <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                <div>
													<span class="btn btn-file">
                                                        <span class="fileupload-new">Select logo</span>
													    <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                                    <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="controls">
                                        <label class="control-label" >Is brand  {{ form_widget(form.isBrand) }}
                                            {{ form_errors(form.isBrand) }}</label>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="row-fluid">

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Shop Categories<span class="required">*</span></label>
                                        <br/>
                                        <div class="controls cat-list" >
                                            {{ form_widget(form.categories) }}
                                            {{ form_errors(form.categories) }}
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                    {% if(entity.id > 0 ) %}
                                        <a href="{{ path('mallconnect_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                    {% endif %}
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
 <style>
     #setting_bundle_contentbundle_mallconnect_categories{
         clear: both;
     }
     #setting_bundle_contentbundle_mallconnect_categories label{
         float:left;
         width: 30%;
     }

 </style>
{% endblock %}
