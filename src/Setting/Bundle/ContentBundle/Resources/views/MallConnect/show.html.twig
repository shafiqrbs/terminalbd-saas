
{% extends '::base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    View Details
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('syndicate') }}">Business Sector</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li><a href="#">View Details</a></li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">

                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Business Sector</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools
                                    <i class="icon-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li class="divider"></li>
                                    <li><a href="{{ path('syndicate_new') }}"><i class="icon-plus"></i>&nbsp; Create</a></li>
                                    <li><a href="{{ path('syndicate') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                    <li><a href="{{ path('syndicate_show',{'id':entity.id}) }}"><i class="icon-eye-open"></i>&nbsp;Show</a></li>
                                    <li><a href="{{ path('syndicate_edit',{'id':entity.id}) }}"><i class="icon-edit"></i>&nbsp;Edit</a></li>
                                    <li class="divider"></li>

                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="portlet-body">
                        <div class="portlet-body form form-horizontal">

                            <div class="row-fluid">
                                <div class="span12">
                                     {% include('flash-message.html.twig')  %}
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Name</label>
                                        <div class="controls control-custom">{{ entity.name }}</div>
                                    </div>
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Syndicate Class</label>
                                        <div class="controls control-custom">{{ entity.entityName }}</div>
                                    </div>
                                </div>
                                <div class="span11">
                                    <div class="control-group">
                                        <label class="control-label" >Menu</label>
                                        <div class="controls control-custom">{{ entity.slug }}</div>
                                    </div>
                                </div>

                                <div class="span11">
                                    <div class="control-group">
                                        <label class="control-label" >Parent name</label>
                                        <div class="controls control-custom">{{ entity.parent.name|default('---') }}</div>
                                    </div>
                                </div>

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label" >Status</label>
                                        <div class="controls control-custom">{% if entity.status == 1 %} Publish {% else %} Un-publish {% endif %}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
