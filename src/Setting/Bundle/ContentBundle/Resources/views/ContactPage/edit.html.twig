{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
                Contact us
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('contactpage_modify') }}">Contact us</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Form Components</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">

            <div class="portlet box green tabbable">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                </div>

                <div class="portlet-body">
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}

                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Address<span class="required">*</span></label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.address1) }}
                                            {{ form_errors(form.address1) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Location</label>
                                    <div class="controls">
                                        {{ form_widget(form.location) }}
                                        {{ form_errors(form.location) }}
                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Postal Code</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.postalCode) }}
                                            {{ form_errors(form.postalCode) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Fax</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.fax) }}
                                            {{ form_errors(form.fax) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Additional Phone/Mobile</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-phone"></i>
                                            {{ form_widget(form.additionalPhone) }}
                                            {{ form_errors(form.additionalPhone) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Additional Email</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-envelope"></i>
                                            {{ form_widget(form.additionalEmail) }}
                                            {{ form_errors(form.additionalEmail) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <label class="control-label" for="firstName">Additional Information</label>
                                    <div class="controls">
                                        {{ form_widget(form.address2) }}
                                        {{ form_errors(form.address2) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--/row-->
                        <div class="row-fluid">
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Contact Person</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-user"></i>
                                            {{ form_widget(form.contactPerson) }}
                                            {{ form_errors(form.contactPerson) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Designation</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.designation) }}
                                            {{ form_errors(form.designation) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Mobile</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.contactMobile) }}
                                            {{ form_errors(form.contactMobile) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Email</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-font"></i>
                                            {{ form_widget(form.contactEmail) }}
                                            {{ form_errors(form.contactEmail) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>

                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" >Is Base Information&nbsp;  {{ form_widget(form.isBaseInformation) }}
                                        {{ form_errors(form.isBaseInformation) }}</label>

                                </div>
                            </div>
                            <!--/span-->
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Is Branch &nbsp; {{ form_widget(form.isBranch) }}
                                        {{ form_errors(form.isBranch) }}</label>

                                </div>
                            </div>
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label" >Is Contact Form&nbsp; {{ form_widget(form.isContactForm) }}
                                        {{ form_errors(form.isContactForm) }}</label>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" >Weekly off day</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            {{ form_widget(form.weeklyOffDay) }}
                                            {{ form_errors(form.weeklyOffDay) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" >Start/End Hour</label>
                                    <div class="controls">
                                        <div class="">
                                            {{ form_widget(form.startHour) }}
                                            {{ form_errors(form.startHour) }}
                                            {{ form_widget(form.endHour) }}
                                            {{ form_errors(form.endHour) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" >Latitude</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-map-marker"></i>
                                            {{ form_widget(form.latitude) }}
                                            {{ form_errors(form.latitude) }}
                                        </div>

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label" >Longitude</label>
                                    <div class="controls">
                                        <div class="input-icon left">
                                            <i class="icon-map-marker"></i>
                                            {{ form_widget(form.longitude) }}
                                            {{ form_errors(form.longitude) }}
                                            <p class="help-block">Google latitude & longitude <a target="_blank" href="http://www.latlong.net/">Click here</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="form-actions portlet box grey">
                            <div class="pull-center">
                                <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
