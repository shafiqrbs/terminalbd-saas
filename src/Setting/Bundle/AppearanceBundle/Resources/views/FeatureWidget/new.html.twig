{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
                E-commerce Page Customize
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('appearancefeaturewidget') }}">E-commerce Page Customize</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li><a href="#">Home Slider</a></li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
           
            <div class="portlet box green ">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                    <div class="actions">
                        <div class="btn-group">
                            <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                Tools
                                <i class="icon-tasks"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="{{ path('appearancefeaturewidget_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                <li><a href="{{ path('appearancefeaturewidget') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    {% include('flash-message.html.twig')  %}
                    <!-- BEGIN FORM-->
                    {{ form_start(form) }}
                    {{ form_row(form._token) }}
                    <div class="row-fluid" >
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >Website Page<span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.menu) }}
                                    {{ form_errors(form.menu) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" for="firstName">Position<span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.position) }}
                                    {{ form_errors(form.position) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <!--/row-->
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Mange Product Feature</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >&nbsp;</label>
                                <div class="controls">Feature Category  {{ form_widget(form.featureCategory) }}</div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Category</label>
                                <div class="controls">
                                    {{ form_widget(form.featureCategoryShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.featureCategoryLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >Category</label>
                                <div class="controls">
                                    {{ form_widget(form.category) }}
                                    {{ form_errors(form.category) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Category</label>
                                <div class="controls">
                                    {{ form_widget(form.categoryShow) }}
                                    {{ form_errors(form.categoryShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.categoryLimit) }}
                                    {{ form_errors(form.categoryLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >&nbsp;</label>
                                <div class="controls">Feature Brand  {{ form_widget(form.featureBrand) }}</div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Brand</label>
                                <div class="controls">
                                    {{ form_widget(form.featureBrandShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.featureBrandLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >Brand</label>
                                <div class="controls">
                                    {{ form_widget(form.brand) }}
                                    {{ form_errors(form.brand) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Brand</label>
                                <div class="controls">
                                    {{ form_widget(form.brandShow) }}
                                    {{ form_errors(form.brandShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.brandLimit) }}
                                    {{ form_errors(form.brandLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >Discount</label>
                                <div class="controls">
                                    {{ form_widget(form.discount) }}
                                    {{ form_errors(form.discount) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Discount</label>
                                <div class="controls">
                                    {{ form_widget(form.discountShow) }}
                                    {{ form_errors(form.discountShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.discountLimit) }}
                                    {{ form_errors(form.discountLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >Promotion</label>
                                <div class="controls">
                                    {{ form_widget(form.promotion) }}
                                    {{ form_errors(form.promotion) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Promotion</label>
                                <div class="controls">
                                    {{ form_widget(form.promotionShow) }}
                                    {{ form_errors(form.promotionShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.promotionLimit) }}
                                    {{ form_errors(form.promotionLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span7">
                            <div class="control-group">
                                <label class="control-label" >Tag</label>
                                <div class="controls">
                                    {{ form_widget(form.tag) }}
                                    {{ form_errors(form.tag) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Show Tag</label>
                                <div class="controls">
                                    {{ form_widget(form.tagShow) }}
                                    {{ form_errors(form.tagShow) }}
                                </div>
                            </div>
                        </div>
                        <div class="span2">
                            <div class="control-group">
                                <label class="control-label" >Limit</label>
                                <div class="controls">
                                    {{ form_widget(form.tagLimit) }}
                                    {{ form_errors(form.tagLimit) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Content</label>
                                        <div class="controls">
                                            {{ form_widget(form.content) }}
                                            {{ form_errors(form.content) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <!--/row-->
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Feature Image</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" >Home Slider</label>
                                <div class="controls">
                                    {{ form_widget(form.jsFeature) }}
                                    {{ form_errors(form.jsFeature) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Slider Feature</label>
                                <div class="controls">
                                    {{ form_widget(form.sliderFeature) }}
                                    {{ form_errors(form.sliderFeature) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Slider Feature Position</label>
                                <div class="controls">
                                    {{ form_widget(form.sliderFeaturePosition) }}
                                    {{ form_errors(form.sliderFeaturePosition) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    {% if features is not empty %}

                    <div class="row-fluid">
                        {% for feature in features  %}
                        <div class="span3">
                            <div class="row-fluid">
                                <div class="span12">
                                    <img class="thumbnail" src="{{ image(feature.webPath).scaleResize(400,400) }}">
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <label class="control-label">
                                        {% if(feature.targetTo) %}{{ feature.targetTo }}{% endif %} -
                                        {% if feature.targetTo == 'Category' and feature.category is not empty %}{{ feature.category.name }}{% endif %}
                                        {% if feature.targetTo == 'Brand' and feature.brand is not empty %}{{ feature.brand.name }}{% endif %}
                                        {% if feature.targetTo == 'Promotion' and feature.promotion is not empty %}{{ feature.promotion.name }}{% endif %}
                                        {% if feature.targetTo == 'Tag' and feature.tag is not empty %}{{ feature.tag.name }}{% endif %}
                                        {% if feature.targetTo == 'Discount' and feature.discount is not empty %}{{ feature.discount.name }}{% endif %}
                                    </label>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12" style="height: 40px">{{ feature.name|truncate(80) }}</div>
                            </div>
                            <div class="row-fluid">
                                <div class="span8">
                                    <label class="control-label"><input type="checkbox" {% if feature.id in featureIds %} checked="checked" disabled="disabled" {% endif %} name="feature[]" value="{{ feature.id }}" >Add Feature</label>
                                </div>
                                <div class="span4">
                                    {% if feature.id in featureIds %}
                                        <label class="control-label"> <input type="checkbox" name="checkId[]" value="{{ feature.id }}" > Remove</label>
                                    {% endif %}
                                </div>
                            </div>
                            <br/>
                        </div>

                        {% endfor %}
                    </div>

                    {% endif %}
                    <br/>
                    <div class="form-actions portlet box grey">
                        <div class="pull-center">
                            <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                            {% if(entity.id > 0 ) %}
                                <a href="{{ path('appearancefeaturewidget_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                            {% endif %}
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <!-- END FORM-->
                </div>
            </div>

        </div>
    </div>
    </div>
<style>
    .row-fluid .span3:nth-child(5) , .row-fluid .span3:nth-child(9), .row-fluid .span3:nth-child(13), .row-fluid .span3:nth-child(17){
        margin-left: 0;
    }
</style>
{% endblock %}

