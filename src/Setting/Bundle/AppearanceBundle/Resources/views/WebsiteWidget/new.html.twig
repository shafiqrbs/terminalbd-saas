{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
               Manage Website Widget Lists
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('appearancewebsitewidget') }}">Website Widget Customize</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
           
            <div class="portlet box green ">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Manage Website Widget</div>
                    <div class="actions">
                        <div class="btn-group">
                            <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                Tools
                                <i class="icon-tasks"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="{{ path('appearancewebsitewidget_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                <li><a href="{{ path('appearancewebsitewidget') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body form">
                    {% include('flash-message.html.twig')  %}
                    <!-- BEGIN FORM-->
                    {{ form_start(form) }}
                    {{ form_row(form._token) }}
                    <div class="row-fluid" >
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >Page<span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.menu) }}
                                    {{ form_errors(form.menu) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" for="firstName">Position<span class="required">*</span></label>
                                <div class="controls">
                                    {{ form_widget(form.position) }}
                                    {{ form_errors(form.position) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="row-fluid" >
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" >Assign Page</label>
                                        <div class="controls">
                                            {{ form_widget(form.page) }}
                                            {{ form_errors(form.page) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="row-fluid" >
                                <div class="span9">
                                    <div class="control-group">
                                        <label class="control-label" >Page Title</label>
                                        <div class="controls">
                                            {{ form_widget(form.pageFeatureName) }}
                                            {{ form_errors(form.pageFeatureName) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" >Page Show Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.pageShowType) }}
                                            {{ form_errors(form.pageShowType) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid" >
                        <div class="span12 ">
                            <div class="control-group">
                                <label class="control-label" >Category base Lists</label>
                                <div class="controls">
                                    {{ form_widget(form.moduleCategory) }}
                                    {{ form_errors(form.moduleCategory) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">

                        <div class="span6">
                            <div class="row-fluid">
                                <div class="span12 ">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Assign Module</label>
                                        <div class="controls">
                                            {{ form_widget(form.module) }}
                                            {{ form_errors(form.module) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Module Title</label>
                                        <div class="controls">
                                            {{ form_widget(form.moduleFeatureName) }}
                                            {{ form_errors(form.moduleFeatureName) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Show Type</label>
                                        <div class="controls">
                                            {{ form_widget(form.moduleShowType) }}
                                            {{ form_errors(form.moduleShowType) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="span3">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName">Data Limit</label>
                                        <div class="controls">
                                            {{ form_widget(form.moduleShowLimit) }}
                                            {{ form_errors(form.moduleShowLimit) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                            <div class="span12">
                                <div class="row-fluid">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Content</label>
                                            <div class="controls">
                                                {{ form_widget(form.content) }}
                                                {{ form_errors(form.content) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="clearfix">&nbsp;</div>
                    <!--/row-->
                    <div class="form-actions portlet box green">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Feature Image</div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="control-group">
                                <label class="control-label" >Image Jquery Feature</label>
                                <div class="controls">
                                    {{ form_widget(form.jsFeature) }}
                                    {{ form_errors(form.jsFeature) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Slider Feature</label>
                                <div class="controls">
                                    {{ form_widget(form.sliderFeature) }}
                                    {{ form_errors(form.sliderFeature) }}
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label" >Slider Feature Position</label>
                                <div class="controls">
                                    {{ form_widget(form.sliderFeaturePosition) }}
                                    {{ form_errors(form.sliderFeaturePosition) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                    {% if features is not empty %}

                    <div class="row-fluid">
                        {% for feature in features  %}
                            {% if feature.webPath is not empty %}
                                <div class="span3">
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <img class="thumbnail" src="{{ image(feature.webPath).scaleResize(400,400) }}">
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <label class="control-label">
                                                {% if(feature.targetTo) %}{{ feature.targetTo }}{% endif %} -
                                                {% if feature.targetTo == 'Category' and feature.category is not empty %}{{ feature.category.name }}{% endif %}
                                                {% if feature.targetTo == 'Page' and feature.menu is not empty %}{{ feature.menu.menu }}{% endif %}
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span8">
                                            <label class="control-label"><input type="checkbox" {% if feature.id in featureIds %} checked="checked" disabled="disabled" {% endif %} name="feature[]" value="{{ feature.id }}" >{{ feature.name }}</label>
                                        </div>
                                        <div class="span4">
                                            {% if feature.id in featureIds %}
                                                <button class="btn remove red"><input type="checkbox" name="checkId[]" value="{{ feature.id }}" ></button>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <br/>
                                </div>
                            {% endif %}

                        {% endfor %}
                    </div>

                    {% endif %}
                    <br/>
                    <div class="form-actions portlet box grey">
                        <div class="pull-center">
                            <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                               {% if(entity.id > 0 ) %}
                                <a href="{{ path('appearancewebsitewidget_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                            {% endif %}
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <!-- END FORM-->
                </div>
            </div>

        </div>
    </div>
    </div>
<script>

</script>
<style>
    .row-fluid .span4:nth-child(4) , .row-fluid .span4:nth-child(7), .row-fluid .span4:nth-child(10), .row-fluid .span4:nth-child(13){
        margin-left: 0;
    }
</style>
{% endblock %}
