{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Sidebar Widget
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="{{ path('homepage') }}">Home</a>
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="{{ path('sidebarwidget') }}">Sidebar Widget</a>
                    </li>
                    <li class="pull-right btn blue disabled mini">
                        <i class="fa fa-calendar"></i>
                        {{ "now"|date("d-F-Y") }}
                    </li>
                </ul>
            </div>
        </div>
        <!-- END sitecontent HEADER-->
        <!-- BEGIN sitecontent CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="btn-group pull-right">

                </div>
                <div class="portlet box green tabbable">

                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                        <div class="actions">
                            <div class="btn-group">
                                <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                    Tools
                                    <i class="icon-tasks"></i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="{{ path('sidebarwidget') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="portlet-body form">
                            {% include('flash-message.html.twig')  %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form) }}
                            {{ form_row(form._token) }}
                            <!--/row-->
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-group">
                                        <label for="{{ form.page.vars.id }}" class="control-label col-md-2">
                                            Pages:
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-icon right">
                                                <div class="controls">
                                                    {{ form_widget(form.page, {'attr': {'class': 'form-control multi-select2 span6 m-wrap'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-group">
                                        <label for="{{ form.module.vars.id }}" class="control-label col-md-2">
                                            Modules:
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-icon right">
                                                <div class="controls">
                                                    {{ form_widget(form.module, {'attr': {'class': 'form-control multi-select2 span6 m-wrap'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="form-group">
                                        <label for="{{ form.feature.vars.id }}" class="control-label col-md-2">
                                            Features:
                                        </label>
                                        <div class="col-md-9">
                                            <div class="input-icon right">
                                                <div class="controls">
                                                    {{ form_widget(form.feature, {'attr': {'class': 'form-control multi-select2 span6 m-wrap'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!--/row-->
                            <br/>
                            <div class="form-actions portlet box grey">
                                <div class="pull-center">
                                    <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                    <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>

                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


{% block documentready %}

    {{ parent() }}
    $("select.multi-select2").multiSelect();

{% endblock %}
