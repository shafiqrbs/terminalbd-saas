{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Menu Group

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div class="">

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ path('menugroup') }}" >Menu Group</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    Show
                </li>

                <li class="pull-right custom-pull-right">
                    <a class="btn green-stripe blue" href="{{ path('menugroup_new') }}"><i class="icon-plus"></i> New Create</a>
                    <a class="btn red-stripe purple" href="{{ path('menugroup_edit', { 'id': entity.id }) }}"><i class="ui-icon-pencil"></i> Edit</a>
                    <a class="btn purple-stripe blue" href="{{ path('menugroup') }}">Listing<i class="icon-headphones"></i></a>

                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">
            <div class="modal-dialog modal-dialog-form" >
                <div class="modal-content" >

                    <div class="modal-body">
                        <div class="form-group form-group-custom backgroundWhite ">

                            <div class="tabbable tabbable-custom" >

                                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >

                                    <tbody>

                                        <tr>
                                            <td><strong>Name</strong></td> <td>{{ entity.name }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Group Type</strong></td> <td>
                                                {% for menuGroup in entity.groupType %}
                                                    {% if(menuGroup == 1) %} Website {% endif %}
                                                    {% if(menuGroup == 2) %} , Mobile {% endif %}
                                                {% endfor %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Status</strong></td><td>{% if( entity.status == 1) %}Active {% else %}Inactive {% endif %}</td>

                                        </tr>
                                    </tbody>
                                </table>

                            </div>


                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
