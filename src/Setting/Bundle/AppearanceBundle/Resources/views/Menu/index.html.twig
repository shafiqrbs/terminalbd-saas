{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-cogs"></i>Menu

            </div>
            <div id="" class="date-tooltip" >
                <i class="fa fa-calendar"></i>
                {{ "now"|date("d-F-Y") }}
            </div>
        </div>
        <div>

            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('homepage') }}" >Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>

                    <a href="javascript:" >Menu</a>

                </li>

                <li class="pull-right custom-pull-right" >
                    <a class="btn green-stripe blue" href="{{ path('menu') }}"><i class="icon-plus"></i> New Create</a>


                </li>
            </ul>
        </div>
        {% include('flash-message.html.twig')  %}
        <div class="form-group form-group-custom backgroundWhite ">

            <div class="tabbable tabbable-custom" >
                <table class="table table-striped table-bordered table-hover table-full-width dataTable" >
                    <thead class="header">
                    <tr>
                        <th>User name </th>
                        <th>Subdomain</th>
                        <th>Syndicate</th>
                        <th>Status</th>

                    </tr>
                    </thead>

                        <tbody>

                        {% for entity in entities %}

                            <tr>
                                <td>{{ entity.user }}</td>
                                <td>{{ entity.subDomain }}</td>
                                <td>{{ entity.syndicate.name }}</td>
                                <td>
                                    {% if( entity.status == 1) %}
                                        <a class="btn mini green-stripe btn-action" href="{{ path('menu_stopMenu', { 'id': entity.id}) }}"><span class="badge badge-success">x</span></a>
                                    {% else %}
                                        <a class="btn mini green-stripe btn-action" href="{{ path('menu_stopMenu', { 'id': entity.id}) }}"><span class="badge badge-important">a</span>    </a>
                                    {% endif %}
                                    <a class="btn mini blue-stripe btn-action" href="{{ path('menu_manage', { 'id': entity.user.id }) }}">Manage Menu</a>
                                    <a class="btn mini purple-stripe btn-action" href="{{ path('menugrouping', { 'id': entity.user.id }) }}">Menu Grouping</a>
                                </td>

                             </tr>

                        {% endfor %}
                        </tbody>

                </table>

            </div>
        </div>

    </div>
{% endblock %}

