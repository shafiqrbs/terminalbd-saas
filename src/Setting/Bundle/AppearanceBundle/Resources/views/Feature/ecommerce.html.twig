{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    <!-- BEGIN PAGE HEADER-->
    <div class="row-fluid">
        <div class="span12">
            <h3 class="page-title">
                Manage Template Feature
            </h3>
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="{{ path('homepage') }}">Home</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li>
                    <a href="{{ path('appearancefeature') }}">Manage Template Feature</a>
                    <span class="icon-angle-right"></span>
                </li>
                <li class="pull-right btn blue disabled mini">
                    <i class="fa fa-calendar"></i>
                    {{ "now"|date("d-F-Y") }}
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="span12">
           
            <div class="portlet box green tabbable">

                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Basic Information</div>
                    <div class="actions">
                        <div class="btn-group">
                            <a class="btn" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                Tools
                                <i class="icon-tasks"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="{{ path('appearancefeature_new') }}"><i class="icon-plus-sign"></i>&nbsp; Create</a></li>
                                <li><a href="{{ path('appearancefeature') }}"><i class="icon-th-list"></i>&nbsp;Lists</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="portlet-body form">
                        {% include('flash-message.html.twig')  %}
                        <!-- BEGIN FORM-->
                        {{ form_start(form) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid">
                            <div class="span8">
                                <div class="row-fluid">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Title <span class="required">*</span></label>
                                            <div class="controls">
                                                <div class="input-icon left">
                                                    <i class="icon-font"></i>
                                                    {{ form_widget(form.name) }}
                                                    {{ form_errors(form.name) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label" for="firstName">Custom URL Path</label>
                                            <div class="controls">
                                                {{ form_widget(form.customUrl) }}
                                                {{ form_errors(form.customUrl) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="row-fluid">
                                            <div class="span4">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Caption Position</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.captionPosition) }}
                                                        {{ form_errors(form.captionPosition) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="span8">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Caption Bg Color</label>
                                                    <div class="controls">
                                                        <div class="input-append color colorpicker-default" data-color=" {{ entity.captionBgColor }}" data-color-format="rgba">
                                                            {{ form_widget(form.captionBgColor) }}
                                                            {{ form_errors(form.captionBgColor) }}
                                                            <span class="add-on"><i style="background-color: {{ entity.captionBgColor }};"></i></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="row-fluid">
                                            <div class="span12 ">
                                                <div class="control-group">
                                                    <label class="control-label" for="firstName">Content</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.content) }}
                                                        {{ form_errors(form.content) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <div class="row-fluid">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Target URL</label>
                                            <div class="controls">
                                                {{ form_widget(form.targetTo) }}
                                                {{ form_errors(form.targetTo) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid {% if entity.targetTo != 'Category' %}hide{% endif %}" id="Category">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Category</label>
                                            <div class="controls">
                                                {{ form_widget(form.category) }}
                                                {{ form_errors(form.category) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row-fluid {% if entity.targetTo != 'Page' %}hide{% endif %}" id="Page">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Page</label>
                                            <div class="controls">
                                                {{ form_widget(form.page) }}
                                                {{ form_errors(form.page) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row-fluid {% if entity.targetTo != 'Promotion' %}hide{% endif %}" id="Promotion">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Promotion</label>
                                            <div class="controls">
                                                {{ form_widget(form.promotion) }}
                                                {{ form_errors(form.promotion) }}
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row-fluid {% if entity.targetTo != 'Tag' %}hide{% endif %}" id="Tag">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Tag</label>
                                            <div class="controls">
                                                {{ form_widget(form.tag) }}
                                                {{ form_errors(form.tag) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid {% if entity.targetTo != 'Discount' %}hide{% endif %}" id="Discount">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Discount</label>
                                            <div class="controls">
                                                {{ form_widget(form.discount) }}
                                                {{ form_errors(form.discount) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label" >Button Name</label>
                                            <div class="controls">
                                                {{ form_widget(form.buttonName) }}
                                                {{ form_errors(form.buttonName) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="firstName">Button Color</label>
                                                <div class="controls">
                                                    <div class="input-append color colorpicker-default" data-color=" {{ entity.buttonBg }}" data-color-format="rgba">
                                                        {{ form_widget(form.buttonBg) }}
                                                        {{ form_errors(form.buttonBg) }}
                                                        <span class="add-on"><i style="background-color: {{ entity.buttonBg }};"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row-fluid">

                            <div class="span12">
                                <div class="row-fluid">
                                    <div class="span12 ">
                                        <div class="control-group">
                                            <label class="control-label" >Feature image</label>
                                            <div class="controls">

                                            </div>
                                            <div class="controls">
                                                <div data-provides="fileupload" class="fileupload fileupload-new">
                                                    <div style="width: 100%; min-height: 150px;" class="fileupload-new thumbnail">
                                                        {% if(entity.webPath) %}
                                                            <img class="fileupload-preview fileupload-exists thumbnail" alt="" src="/{{ entity.webPath }}">
                                                        {% else %}
                                                            <img alt="" src="http://www.placehold.it/1024x512/EFEFEF/AAAAAA&amp;text=no+image">
                                                        {% endif %}
                                                    </div>
                                                    <div  class="fileupload-preview fileupload-exists thumbnail"></div>
                                                    <div>
													<span class="btn btn-file">
                                                        <span class="fileupload-new">Select image</span>
													    <span class="fileupload-exists">Change</span>
                                                        {{ form_widget(form.file) }}
                                                        {{ form_errors(form.file) }}
                                                    </span>
                                                        <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br/>
                        <div class="form-actions portlet box grey">
                            <div class="pull-center">
                                <button type="submit" class="btn green"><i class="icon-ok"></i> Save</button>
                                <button type="submit" class="btn purple"><i class="icon-refresh"></i> Reset</button>
                                {% if(entity.id > 0 ) %}
                                    <a href="{{ path('appearancefeature_delete',{'id': entity.id} ) }}"  class="btn red confirm" title="Are you sure went to delete?"><i class="icon-remove"></i> Delete</a>
                                {% endif %}
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <!-- END FORM-->
                    </div>
                </div>
            </div>

        </div>
    </div>
    </div>
<st
{% endblock %}
